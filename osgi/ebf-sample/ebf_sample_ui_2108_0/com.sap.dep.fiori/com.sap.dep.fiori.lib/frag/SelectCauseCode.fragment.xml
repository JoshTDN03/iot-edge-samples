<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout">
    <Dialog
        title="{i18nGlobal>CauseCodeSelect.title}"
        class="dep-fiori"
        stretchOnPhone="true"
        contentHeight="100%"
        contentWidth="100%"
        verticalScrolling="false"
        afterClose="dep.fiori.lib.util.SelectCauseCodeDialog.onCancel">
        <Page
            showHeader="false"
            showSubHeader="false"
            enableScrolling="false">
            <VBox
                fitContainer="true"
                renderType="Bare">
                <core:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
                <ScrollContainer
                    vertical="true"
                    height="100%"
                    width="100%">
                    <Table
                        id="list"
                        items="{odata>/Cause_Code}"
                        noDataText="{i18nGlobal>CauseCodeSelect.listEmpty}"
                        growing="true"
                        growingScrollToLoad="true"
                        mode="SingleSelectMaster"
                        itemPress="dep.fiori.lib.util.SelectCauseCodeDialog.onSelect">
                        <headerToolbar>
                            <Toolbar>
                                <Title text="{i18nGlobal>General.causecode}" />
                                <ToolbarSpacer />
                                <Button
                                    tooltip="{i18nGlobal>General.sortList}"
                                    icon="sap-icon://drop-down-list"
                                    press="dep.fiori.lib.util.SelectCauseCodeDialog.onSortPress" />
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column vAlign="Middle">
                                <Title text="{i18nGlobal>CauseCodeSelect.group}" />
                            </Column>
                            <Column
                                vAlign="Middle"
                                width="30%"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                popinDisplay="Inline">
                                <Title text="{i18nGlobal>CauseCodeSelect.code}" />
                            </Column>
                            <Column vAlign="Middle">
                                <Title text="{i18nGlobal>CauseCodeSelect.text}" />
                            </Column>
                        </columns>
                        <ColumnListItem type="Active">
                            <Label
                                text="{odata>URGRP}"
                                tooltip="{odata>URGRP}" />
                            <Label
                                text="{odata>URCOD}"
                                tooltip="{odata>URCOD}" />
                            <Label
                                text="{odata>URTXT}"
                                tooltip="{odata>URTXT}" />
                        </ColumnListItem>
                    </Table>
                </ScrollContainer>
            </VBox>
            <footer>
                <Bar>
                    <contentRight>
                        <Button
                            text="{i18nGlobal>General.cancel}"
                            press="dep.fiori.lib.util.SelectCauseCodeDialog.close" />
                    </contentRight>
                </Bar>
            </footer>
        </Page>
    </Dialog>
</core:FragmentDefinition>
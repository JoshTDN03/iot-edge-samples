<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="Work Related">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="WorkRelatedListCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterWorkRelatedList"/>

        <Table id="workRelatedTable" items="{WORK_RELATED_LIST>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="ID"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="Description"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="selectWorkRelatedList">
                    <cells>
                        <Text text="{WORK_RELATED_LIST>WORK_RELATED_CAT}"/>
                        <Text text="{WORK_RELATED_LIST>WORK_RELATED_DESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
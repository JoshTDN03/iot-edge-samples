<c:View
    controllerName="dep.fiori.equipment.block.hierarchy"
    xmlns:c="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
     <t:TreeTable
         id="hierarchyTable"
         showColumnVisibilityMenu="true"
         selectionMode="Single"
         selectionBehavior="RowOnly"
         rowSelectionChange="onHierarchySelectionChange"
         rows="{hierarchy>/}">
         <t:columns>
             <t:Column label="{i18nGlobal>EquipmentSelect.equipment}">
                 <t:template>
                     <Label  
                         text="{hierarchy>ID}"
                         tooltip="{hierarchy>ID}"
                         design="Bold"
                         class="identifierTextBlue"/>
                 </t:template>
             </t:Column>
             <t:Column label="{i18nGlobal>General.description}">
                 <t:template>
                     <Label 
                         text="{hierarchy>DESCRIPTION}"
                         tooltip="{hierarchy>DESCRIPTION}"/>
                 </t:template>
             </t:Column>
             <t:Column label="{i18n>Equipment.type}">
                 <t:template>
                     <Label 
                         text="{
                            path: 'hierarchy>OBJECT_TYPE',
                            formatter: '.objTypeFormatter'
                         }"
                         tooltip="{
                            path: 'hierarchy>OBJECT_TYPE',
                            formatter: '.objTypeFormatter'
                         }"/>
                 </t:template>
             </t:Column>
             <t:Column label="{i18n>Equipment.model}">
                 <t:template>
                     <Label 
                         text="{hierarchy>MODEL_NAME}"
                         tooltip="{hierarchy>MODEL_NAME}"/>
                 </t:template>
             </t:Column>
             <t:Column label="{i18n>Equipment.manufacturer}">
                 <t:template>
                     <Label 
                         text="{hierarchy>MANUFACTURER}"
                         tooltip="{hierarchy>MANUFACTURER}"/>
                 </t:template>
             </t:Column>
         </t:columns>
     </t:TreeTable>
</c:View>
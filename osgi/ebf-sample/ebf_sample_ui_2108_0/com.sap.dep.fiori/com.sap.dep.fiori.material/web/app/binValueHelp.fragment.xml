<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog
        title="{i18n>Bin.selectBin}"
        class="dep-fiori"
        stretchOnPhone="true"
        contentHeight="100%"
        contentWidth="100%"
        verticalScrolling="false">
        <Page showHeader="false">
            <subHeader>
                <Toolbar>
                    <SearchField
                        search="onBinSearch"
                        width="100%" />
                </Toolbar>
            </subHeader>
            <List
                id="binList"
                noDataText="{i18n>Bin.listEmpty}"
                items="{lookup>/bin}"
                itemPress="onBinSelect"
                growing="true"
                growingThreshold="100"
                growingScrollToLoad="true"
                mode="SingleSelectMaster" >
                <StandardListItem
                    title="{lookup>LGPBE}"
                    custom:itemKey="{lookup>LGPBE}"
                    type="Active" />
            </List>
            <footer>
                <Bar>
                    <contentRight>
                        <Button
                            text="{i18nGlobal>General.cancel}"
                            press="onBinCancel" />
                    </contentRight>
                </Bar>
            </footer>
        </Page>
    </Dialog>
</c:FragmentDefinition>
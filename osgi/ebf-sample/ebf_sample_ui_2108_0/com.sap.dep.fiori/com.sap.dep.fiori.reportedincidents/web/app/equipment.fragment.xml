<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>EquipmentLookup.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="equipmentDialogCancel"/>
        </endButton>

        <SearchField width="100%" placeholder="{i18n>EquipmentLookup.searchPlaceholder} ..." liveChange="equipmentFilter"/>

        <Table inset="true" mode="sap.m.ListMode.None" includeItemInSelection="false" items="{/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>EquipmentLookup.equipmentID}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>EquipmentLookup.equipmentDesc}"/>
                </Column>
                <Column minScreenWidth="Desktop" demandPopin="true">
                    <Label text="{i18n>EquipmentLookup.equipmentType}"/>
                </Column>
                <Column minScreenWidth="Desktop" demandPopin="true">
                    <Label text="{i18n>EquipmentLookup.equipmentFLocation}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="onEquipmentSelect">
                    <cells>
                        <Text text="{EQUIPMENT_ID}"/>
                        <Text text="{EQUIPMENT_DESC}"/>
						<Text text="{EQUIPMENT_TYPE}"/>
                        <Text text="{EQUIPMENT_FLOC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
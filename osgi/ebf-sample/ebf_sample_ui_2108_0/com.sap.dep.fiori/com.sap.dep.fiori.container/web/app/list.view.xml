<mvc:View
    controllerName="dep.fiori.container.app.list"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
            <ScrollContainer
                vertical="true"
                height="100%"
                width="100%">
                <Table
                    id="list"
                    items="{odata>/Containers}"
                    noDataText="{i18n>List.empty}"
                    growing="true"
                    growingScrollToLoad="true"
                    itemPress="onItemPress">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>Container.title}" />
                            <ToolbarSpacer />
                            <Button
                                tooltip="{i18nGlobal>General.sortList}"
                                icon="sap-icon://drop-down-list"
                                press="onSortPress" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column vAlign="Middle">
                            <Title text="{i18n>Container.id}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            width="30%"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title text="{i18nGlobal>General.description}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title text="{i18n>Container.type}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title text="{i18n>Container.ext_id}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title text="{i18n>Container.source}" />
                        </Column>
                    </columns>
                    <ColumnListItem type="Active">
                        <Label
                            text="{odata>CONTAINER_ID}"
                            tooltip="{odata>CONTAINER_ID}"
                            design="Bold"
                            class="identifierTextBlue" />
                        <Label
                            text="{odata>CONTAINER_DESC}"
                            tooltip="{odata>CONTAINER_DESC}" />
                        <Label
                            text="{odata>CONTAINER_TYPE}"
                            tooltip="{odata>CONTAINER_TYPE}" />
                        <Label
                            text="{odata>EXT_CONTAINER_ID}"
                            tooltip="{odata>EXT_CONTAINER_ID}" />
                        <Label
                            text="{odata>CONTAINER_SOURCE}"
                            tooltip="{odata>CONTAINER_SOURCE}" />
                    </ColumnListItem>
                </Table>
            </ScrollContainer>
        </VBox>
    </Page>
</mvc:View>
<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>Model.name}"
                key="MODEL_NAME"
                selected="true" />
            <ViewSettingsItem
                text="{i18nGlobal>General.description}"
                key="DESCRIPTION" />
            <ViewSettingsItem
                text="{i18n>Model.manufacturer}"
                key="MANUFACTURER" />
            <ViewSettingsItem
                text="{i18n>Model.class}"
                key="CLASS" />
            <ViewSettingsItem
                text="{i18n>Model.subClass}"
                key="SUBCLASS" />
            <ViewSettingsItem
                text="{i18n>Model.root}"
                key="IS_ROOT_MODEL" />
            <ViewSettingsItem
                text="{i18n>Model.sensor}"
                key="IS_SENSOR" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
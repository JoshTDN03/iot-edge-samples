<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        id="longTextDialog"
        class="dep-fiori"
        verticalScrolling="false"
        title="{i18n>Dialog.title}">
        <beginButton>
            <Button
                id="longTextSave"
                text="{i18nGlobal>General.save}"
                press="longTextSave"/>
        </beginButton>

        <endButton>
            <Button
                id="longTextCancel"
                text="{i18nGlobal>General.cancel}"
                press="longTextCancel"/>
        </endButton>
        <TextArea id="longTextArea" width="100%" growing="true" rows="4" value="{operation>/WO_OPNOTE_LTXT}" escapeHandler="longTextEscape"/>
         
    </Dialog>
</c:FragmentDefinition>

<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>Container.id}"
                key="CONTAINER_ID"
                selected="true" />
            <ViewSettingsItem
                text="{i18nGlobal>General.description}"
                key="CONTAINER_DESC" />
            <ViewSettingsItem
                text="{i18n>Container.type}"
                key="CONTAINER_TYPE" />
            <ViewSettingsItem
                text="{i18n>Container.ext_id}"
                key="EXT_CONTAINER_ID" />
            <ViewSettingsItem
                text="{i18n>Container.source}"
                key="CONTAINER_SOURCE" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
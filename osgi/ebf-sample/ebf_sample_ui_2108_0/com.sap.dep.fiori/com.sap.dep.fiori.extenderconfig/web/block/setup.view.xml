<c:View
    controllerName="dep.fiori.extenderconfig.block.setup"
    xmlns:c="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns="sap.m">
    <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
    <Table
        id="list"
        noDataText="{i18nGlobal>General.listEmpty}"
        items="{
            path: 'odata>/DataProvider',
            sorter: { path: 'ID' }
        }"
        growing="true"
        growingScrollToLoad="true"
        mode="SingleSelectMaster"
        itemPress="onListItemSelect">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    tooltip="{i18n>DataProvider.add}"
                    icon="sap-icon://add"
                    press="onCreate" />
                <Button
                    tooltip="{i18nGlobal>General.sortList}"
                    icon="sap-icon://drop-down-list"
                    press="onSortPress" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column
                vAlign="Middle"
                width="25%">
                <Title
                    text="{i18n>Label.providerId}"
                    tooltip="{i18n>Label.providerId}" />
            </Column>
            <Column vAlign="Middle">
                <Title
                    text="{i18n>Label.domain}"
                    tooltip="{i18n>Tooltip.domain}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="999rem"
                demandPopin="true"
                popinDisplay="Inline">
                <Title
                    text="{i18n>Label.serviceCount}"
                    tooltip="{i18n>Tooltip.serviceCount}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Desktop"
                demandPopin="true"
                popinDisplay="Inline"
                width="20%">
                <Title
                    text="{i18n>Label.proxy}"
                    tooltip="{i18n>Tooltip.proxy}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Desktop"
                demandPopin="true"
                popinDisplay="Inline"
                width="20%">
                <Title
                    text="{i18n>Label.certificate}"
                    tooltip="{i18n>Tooltip.certificate}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation">
                <cells>
                    <Label
                        text="{odata>ID}"
                        tooltip="{odata>ID}" />
                    <Label
                        text="{odata>DOMAIN_URL}"
                        tooltip="{odata>DOMAIN_URL}" />
                    <Label text="{odata>SERVICES}" />
                    <Label
                        text="{odata>HTTP_PROXY}"
                        tooltip="{odata>HTTP_PROXY}" />
                    <Label
                        text="{odata>CERTIFICATE}"
                        tooltip="{odata>CERTIFICATE}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:View>
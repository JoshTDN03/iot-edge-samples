<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>Label.providerId}"
                key="ID"
                selected="true" />
            <ViewSettingsItem
                text="{i18n>Label.domain}"
                key="DOMAIN_URL" />
            <ViewSettingsItem
                text="{i18n>Label.serviceCount}"
                key="SERVICES" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
<mvc:View
    controllerName="dep.fiori.incident.app.saved"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.uxap"
    xmlns:c="sap.ui.core">
    <App id="content">
        <Page showHeader="false">
            <u:ObjectPageLayout>
                <u:headerContent>
                    <l:VerticalLayout width="100%">
                        <HBox
                            class="savedIncidentHeader"
                            justifyContent="SpaceBetween"
                            alignItems="Center"
                            wrap="Wrap">
                            <Title
                                text="{i18nGlobal>General.report} {/ID}"
                                titleStyle="H3"
                                level="H3"/>
                            <HBox alignItems="Center">
                                <Label
                                    class="incidentReportedBy"
                                    text="{i18n>Form.authorLabel}"/>
                                <Image
                                    height="2.5rem"
                                    class="borderRadiusCircle"
                                    src="{createdByImg>/imageURL}"/>
                            </HBox>
                        </HBox>
                    </l:VerticalLayout>
                </u:headerContent>
                <u:sections>
                    <u:ObjectPageSection title="{i18n>Form.title}" id="page">
                        <u:subSections>
                            <u:ObjectPageSubSection>
                                <u:blocks>
                                    <VBox>
                                        <VBox class="sapUiSmallMargin">
                                            <Label text="{i18n>Form.incidentTileLabel}" required="true"/>
                                            <Text text="{/TITLE}"/>
                                        </VBox>
                                        <VBox class="sapUiSmallMargin">
                                            <Label text="{i18n>Form.descriptionLabel}" required="true"/>
                                            <Text text="{/ELTXT}"/>
                                        </VBox>
                                        <VBox class="sapUiSmallMargin">
                                            <Label text="{i18n>Form.locationLabel}" required="true" />
                                            <Text text="{/PLANT_LOC_CODE}"/>
                                        </VBox>
                                        <VBox class="sapUiSmallMargin">
                                            <Label text="{i18n>Form.dateLabel}" required="true"/>
                                            <Text text="{/START_DATE}"/>
                                        </VBox>
                                        <HBox>
                                            <VBox class="sapUiSmallMargin" width="50%">
                                                <Label text="{i18n>Form.timeLabel}" required="true"/>
                                                <Text text="{/START_TIME}"/>
                                            </VBox>
                                            <VBox class="sapUiSmallMargin" width="50%">
                                                <Label text="{i18nGlobal>General.timezone}:" required="true"/>
                                                <Text text="{/START_TIME_ZONE}"/>
                                            </VBox>
                                        </HBox>
                                    </VBox>
                                </u:blocks>
                            </u:ObjectPageSubSection>
                        </u:subSections>
                    </u:ObjectPageSection> 
                </u:sections>
            </u:ObjectPageLayout>
            <footer>
                <Bar id="otbFooter">
                    <contentLeft>
                        <Button id="messages-button" icon="sap-icon://message-popup" text="{/messagesLength}" type="Emphasized"
                            press="handleMessagePopoverPress"/>
                    </contentLeft>
                    <contentRight>
                        <Button id="Edit-button" type="Emphasized" text="{i18nGlobal>General.edit}" press="onSubmitPress" enabled="false"/>
                    </contentRight>
                </Bar>
            </footer> 
        </Page>
    </App>
</mvc:View>
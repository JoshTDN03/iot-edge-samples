<mvc:View
    controllerName="dep.fiori.purchasereq.app.list"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:lib="dep.fiori.lib">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
            <ScrollContainer
                vertical="true"
                height="100%"
                width="100%">
                <Table
                    id="list"
                    noDataText="{i18n>PRList.empty}"
                    items="{path:'odata>/Purchase_Requisitions', sorter: {path: 'PR_NO_LOCAL', descending: true}}"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="SingleSelectMaster"
                    itemPress="onItemPress">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>PRList.title}" />
                            <ToolbarSpacer />
                            <Button
                                tooltip="{i18n>Page.createPurchaseReq}"
                                icon="sap-icon://add"
                                press="onCreatePress" />
                            <Button
                                tooltip="{i18nGlobal>General.sortList}"
                                icon="sap-icon://drop-down-list"
                                press="onSortPress" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>PR.number}"
                                tooltip="{i18n>PR.number}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>PR.localNumber}"
                                tooltip="{i18n>PR.localNumber}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18n>PR.type}"
                                tooltip="{i18n>PR.type}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18n>PR.lastUpdated}"
                                tooltip="{i18n>PR.lastUpdated}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18n>PR.status}"
                                tooltip="{i18n>PR.status}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>PR.items}"
                                tooltip="{i18n>PR.items}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="999rem"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18nGlobal>General.description}"
                                tooltip="{i18nGlobal>General.description}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active">
                            <cells>
                                <HBox
                                    fitContainer="true"
                                    renderType="Bare"
                                    alignItems="Center">
                                    <Label
                                        text="{odata>BANFN}"
                                        tooltip="{odata>BANFN}"
                                        class="sapUiTinyMarginEnd" />
                                    <c:Icon
                                        src="sap-icon://message-error"
                                        size="1.25rem"
                                        color="red"
                                        tooltip="{i18nGlobal>General.hasSyncErrors}"
                                        visible="{= !!${odata>EDGE_ERRORS} }"
                                        press="handleResponsivePopoverPress" />
                                </HBox>
                                <Label
                                    text="{odata>PR_NO_LOCAL}"
                                    tooltip="{odata>PR_NO_LOCAL}" />
                                <Label
                                    text="{
                                        path: 'odata>POTYP',
                                        formatter: '.typeFormatter'
                                    }"
                                    tooltip="{
                                        path: 'odata>POTYP',
                                        formatter: '.typeFormatter'
                                    }" />
                                <Label
                                    text="{
                                        path: 'odata>ERDAT',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.date'
                                    }"
                                    tooltip="{
                                        path: 'odata>ERDAT',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.date'
                                    }" />
                                <Label
                                    text="{
                                        path: 'odata>PR_STATUS',
                                        formatter: '.statusFormatter'
                                    }"
                                    tooltip="{
                                        path: 'odata>PR_STATUS',
                                        formatter: '.statusFormatter'
                                    }" />
                                <Label text="{odata>NUM_ITEMS}" />
                                <Label
                                    text="{odata>LTXT}"
                                    tooltip="{odata>LTXT}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </VBox>
    </Page>
</mvc:View>
<mvc:View
    controllerName="dep.fiori.workorder.app.detail"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.uxap"
    xmlns="sap.m"
    xmlns:blocks="dep.fiori.workorder.block">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <u:ObjectPageLayout
            id="content"
            useIconTabBar="true"
            enableLazyLoading="true"
            navigate="onBlockSelect">

            <u:headerTitle>
                <u:ObjectPageHeader
                    objectTitle="{i18nGlobal>General.workorder} {/AUFNR}">
                    <u:ObjectPageHeaderActionButton
                        icon="sap-icon://message-error"
                        text="{i18n>List.hasErrors}"
                        tooltip="{i18n>List.hasErrors}"
                        importance="High"
                        visible="{= !!${/EDGE_ERRORS} }"
                        type="Reject"
                        press="handleResponsivePopoverPress" />
                </u:ObjectPageHeader>
            </u:headerTitle>

            <u:headerContent>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <HBox renderType="Bare">
                        <Label
                            text="{i18nGlobal>General.plant}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{/WERKS}" />
                    </HBox>
                    <HBox renderType="Bare">
                        <Label
                            text="{i18n>Workorder.type}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{/AUART}" />
                    </HBox>
                    <HBox renderType="Bare">
                        <Label
                            text="{i18n>Workorder.sysStatus}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{/SYSTEM_STATUS}" />
                    </HBox>
                </VBox>
            </u:headerContent>

            <u:ObjectPageSection
                id="detail"
                title="{i18nGlobal>General.details}">
                <u:ObjectPageSubSection>
                    <u:blocks>
                        <blocks:Detail />
                    </u:blocks>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>

            <u:ObjectPageSection
                id="operations"
                title="{i18n>Detail.operations}">
                <u:ObjectPageSubSection>
                    <u:blocks>
                        <blocks:Operations />
                    </u:blocks>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>

            <u:ObjectPageSection
                id="attachments"
                title="{i18nGlobal>General.attachments}">
                <u:ObjectPageSubSection>
                    <u:blocks>
                        <blocks:Attachments />
                    </u:blocks>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>

            <u:ObjectPageSection
                id="history"
                title="{i18n>Detail.history}">
                <u:ObjectPageSubSection>
                    <u:blocks>
                        <blocks:History />
                    </u:blocks>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>
            
            <u:ObjectPageSection
                id="docflow"
                title="{i18n>Detail.docFlow}">
                <u:ObjectPageSubSection>
                    <u:blocks>
                        <blocks:DocFlow />
                    </u:blocks>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>
        </u:ObjectPageLayout>
    </Page>
</mvc:View>
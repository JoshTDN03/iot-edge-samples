<c:View
    controllerName="dep.fiori.workorder.block.docflow"
    xmlns:c="sap.ui.core"
    xmlns:lib="dep.fiori.lib"
    xmlns="sap.m">
    <Tree
        class="docFlowTree"
        headerText="{i18n>Detail.docFlow}"
        mode="SingleSelectMaster"
        itemPress="onPress"
        items="{
            path: '/0/',
            parameters: {
                numberOfExpandedLevels: 5
            }
        }" >
        <StandardTreeItem
            type="Active" 
            title="{
                parts: ['desc', 'text', 'material', 'quantity'],
                formatter: '.treeItemTitleFormatter'
            }" />
    </Tree>
</c:View>
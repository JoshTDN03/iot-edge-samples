<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>EquipmentTypeLookup.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="equipmentTypeDialogCancel"/>
        </endButton>

        <SearchField width="100%" placeholder="{i18n>EquipmentTypeLookup.searchPlaceholder} ..." liveChange="equipmentTypeFilter"/>

        <Table inset="true" mode="sap.m.ListMode.None" includeItemInSelection="false" items="{/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>EquipmentTypeLookup.equipmentType}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>EquipmentTypeLookup.equipmentTypeDesc}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="onEquipmentTypeSelect">
                    <cells>
                        <Text text="{ASSET_TYPE}"/>
                        <Text text="{ASSET_TYPE_DESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="Body Part">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="bodyPartListCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterBodyPartList"/>

        <Table id="bodyPartTable" items="{BODY_PART>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="ID"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="Description"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="selectBodyPartList">
                    <cells>
                        <Text text="{BODY_PART>BODYPART}"/>
                        <Text text="{BODY_PART>BODYPARTDESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
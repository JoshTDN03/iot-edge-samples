<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>Classification.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="accidentLocationClassificationDialogCancel"/>
        </endButton>

        <SearchField width="100%" placeholder="{i18n>Location.searchPlaceholder} ..." liveChange="accidentLocationClassificationFilter"/>

        <Table id="accidentLocationClassificationTable" inset="true" includeItemInSelection="false" items="{/}">

            <columns>
			     <Column minScreenWidth="Desktop" demandPopin="true">
                    <Label text="{i18n>Location.locationClassificationIDLabel}"/>
                </Column>
                <Column demandPopin="true">
                    <!--<Label text="{i18n>Location.descriptionLabel}"/>-->
					<Label text="{i18n>Location.locationClassificationLabel}"/>
                </Column>
               
            </columns>

            <items>
                <ColumnListItem type="Active" press="onAccidentLocationClassificationSelect">
                    <cells>
					    <Text text="{LOCATION_CLASS_ID}"/>
                        <Text text="{DESCRIPTION}"/>                      
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog
        confirm="onSort"
        sortDescending="true">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>Workorder.number}"
                key="AUFNR"
                selected="true" />
            <ViewSettingsItem
                text="{i18nGlobal>General.description}"
                key="KTEXT" />
            <ViewSettingsItem
                text="{i18n>Workorder.userStatus}"
                key="USER_STATUS" />
            <ViewSettingsItem
                text="{i18nGlobal>General.equipment}"
                key="EQUNR" />
            <ViewSettingsItem
                text="{i18n>Form.workcenterLabel}"
                key="VAPLZ" />
            <ViewSettingsItem
                text="{i18n>Workorder.dueDate}"
                key="GLTRP" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
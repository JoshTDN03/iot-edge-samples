<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>InfluencingFactorDialog.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="influencingFactorCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterInfluencingFactors"/>

        <Table id="influencingFactorsDialog" items="{INFLUENCING_FACTORS>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>InfluencingFactorCategoryForm.id}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18nGlobal>General.description}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="addInfluencingFactor">
                    <cells>
                        <Text text="{INFLUENCING_FACTORS>INFLUEN_FACTOR_ID}"/>
                        <Text text="{INFLUENCING_FACTORS>INFLUEN_FACTOR_DESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
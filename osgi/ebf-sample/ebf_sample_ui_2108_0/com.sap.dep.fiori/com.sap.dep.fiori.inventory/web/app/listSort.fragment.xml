<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>Inventory.localNumber}"
                key="INV_NO_LOCAL"
                selected="true" />
            <ViewSettingsItem
                text="{i18n>Inventory.number}"
                key="IBLNR" />
            <ViewSettingsItem
                text="{i18n>Inventory.date}"
                key="BLDAT" />
            <ViewSettingsItem
                text="{i18n>Inventory.total}"
                key="TOTAL_ITEMS" />
            <ViewSettingsItem
                text="{i18n>Inventory.uncounted}"
                key="ITEMS_UNCOUNTED" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
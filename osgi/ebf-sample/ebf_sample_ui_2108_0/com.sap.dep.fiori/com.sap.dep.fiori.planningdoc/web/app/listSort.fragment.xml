<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog
        confirm="onSort"
        sortDescending="true">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>PlanDoc.id}"
                key="PLANDOC_ID"
                selected="true" />
            <ViewSettingsItem
                text="{i18n>MRP.number}"
                key="MRP_NUMBER" />
            <ViewSettingsItem
                text="{i18nGlobal>General.description}"
                key="DESCRIPTION" />
            <ViewSettingsItem
                text="{i18n>PlanDoc.date}"
                key="CREATED_TS" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
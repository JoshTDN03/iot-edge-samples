<mvc:View
    controllerName="dep.fiori.integration.app.main"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns:u="sap.uxap"
    xmlns="sap.m"
    xmlns:lib="dep.fiori.lib">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <u:ObjectPageLayout
            id="content"
            useIconTabBar="true"
            showFooter="true">
            <u:headerTitle>
                <u:ObjectPageHeader objectTitle="{i18n>Page.title}" />
            </u:headerTitle>
            <u:ObjectPageSection id="main">
                <u:ObjectPageSubSection>
                    <u:blocks>
                        <lib:control.IntegrationControl
                            id="integrationPoints"
                            fitContainer="true"
                            renderType="Bare"
                            label="Integration Points:"
                            urlPrefix="https://localhost:8443"
                            class="sapUiSmallMargin" />
                    </u:blocks>
                </u:ObjectPageSubSection>
            </u:ObjectPageSection>
        </u:ObjectPageLayout>

        <footer>
            <Bar>
                <contentRight>
                    <Button
                        type="Emphasized"
                        text="{i18n>General.confirm}"
                        press="onConfirm"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
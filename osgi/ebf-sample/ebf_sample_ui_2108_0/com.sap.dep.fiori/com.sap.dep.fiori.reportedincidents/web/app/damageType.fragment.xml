<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>DamageTypeLookup.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="damageTypeDialogCancel"/>
        </endButton>

        <SearchField width="100%" placeholder="{i18n>DamageTypeLookup.searchPlaceholder} ..." liveChange="damageTypeFilter"/>

        <Table inset="true" mode="sap.m.ListMode.None" includeItemInSelection="false" items="{/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>DamageTypeLookup.damageType}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>DamageTypeLookup.damageDesc}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="onDamageTypeSelect">
                    <cells>
                        <Text text="{DAMAGE_TYPE}"/>
                        <Text text="{DAMAGE_TYPE_DESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
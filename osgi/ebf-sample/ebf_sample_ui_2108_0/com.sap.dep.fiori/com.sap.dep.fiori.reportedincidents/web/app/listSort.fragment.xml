<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog
        confirm="onSort"
        sortDescending="true">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>ListItem.incidentID}"
                key="ID_LOCAL"
                selected="true" />
				<ViewSettingsItem
                text="{i18n>ListItem.ehsID}"
                key="ID"
                selected="true" />
                <ViewSettingsItem
                text="{i18n>ListItem.creationDate}"
                key="START_DATE"
                selected="true" />
                <ViewSettingsItem
                text="{i18n>ListItem.status}"
                key="STATUS"
                selected="true" />
                <ViewSettingsItem
                text="{i18n>ListItem.incidentTitle}"
                key="TITLE"
                selected="true" />
                <ViewSettingsItem
                text="{i18n>ListItem.location}"
                key="PLANT_LOC_DESCRIPTION"
                selected="true" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>InfluencingFactorAddDialog.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="influencingFactorAddCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterInfluencingFactorsAdd"/>

        <Table id="influencingFactorsAddDialog" items="{INFLUENCING_FACTORS_ADD>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>InfluencingFactorsTable.factorCategory}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>InfluencingFactorsTable.influencingFactor}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>InfluencingFactorAddTable.factorDescription}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="addFactorMain">
                    <cells>
                        <Text text="{INFLUENCING_FACTORS_ADD>INFLUEN_FACTOR_CAT_ID}"/>
                        <Text text="{INFLUENCING_FACTORS_ADD>INFLUEN_FACTOR_ID}"/>
                        <Text text="{INFLUENCING_FACTORS_ADD>INFLUEN_FACTOR_DESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
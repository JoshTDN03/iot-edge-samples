<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        class="dep-fiori"
        title="{i18n>DuplicateWO.title}"
        type="Message">

        <Text text="{i18n>DuplicateWO.description}"/>
        <f:SimpleForm
            layout="ResponsiveGridLayout"
            maxContainerCols="2"
            labelSpanS="5"
            columnsS="1">
            <Label text="{i18nGlobal>General.equipment}" />
            <Text text="{/EQUNR}" />
            <Label text="{i18nGlobal>General.description}" />
            <Text text="{/KTEXT}" />
        </f:SimpleForm>

        <beginButton>
            <Button
                text="{i18nGlobal>General.ok}"
                press="duplicateWODialogOk"/>
        </beginButton>

        <endButton>
            <Button
                text="{i18n>DuplicateWO.view}"
                press="duplicateWODialogView"/>
        </endButton>
    </Dialog>
</c:FragmentDefinition>
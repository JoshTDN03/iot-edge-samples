<mvc:View
    controllerName="dep.fiori.workorder.app.saved"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:u="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page  
        title="{i18n>Page.title}"
        showHeader="false">

        <u:ObjectPageLayout>

            <u:headerTitle>
                <u:ObjectPageHeader 
                    objectImageURI="{createdByImg>/imageURL}"
                    isObjectIconAlwaysVisible="true"
                    objectTitle="{i18nGlobal>General.order} {savedWorkorder>/AUFNR}"
                    objectSubtitle="{i18n>Form.authorLabel}:"
                    objectImageShape="Circle">
                </u:ObjectPageHeader>
            </u:headerTitle>

            <u:sections>
                <u:ObjectPageSection title="Basic Details" id="page" >
                    <u:subSections>
                        <u:ObjectPageSubSection>
                            <u:blocks>
                                <VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18n>Form.dateLabel}:" required="true"/>
                                        <Text text="{ path: '/GSTRP', formatter: 'dep.fiori.lib.util.Utilities.formatters.date' }"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18nGlobal>General.description}:" required="true"/>
                                        <Text text="{/KTEXT}"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18n>Form.maintenanceLabel}:" required="true"/>
                                        <Text text="{/ILART} - {/ILATX}"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18nGlobal>General.equipment}:" required="true"/>
                                        <Text text="{/EQUNR}"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18n>Form.locationLabel}:" required="true"/>
                                        <Text text="{/TPLNR}"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18n>Form.workcenterLabel}:" required="true"/>
                                        <Text text="{/VAPLZ}"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18nGlobal>General.priority}:"/>
                                        <Text text="{/PRIOKX}"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom">
                                        <Label text="{i18nGlobal>General.breakdown}:"/>
                                        <Text text="{ path: '/MSAUS', formatter: '.formatters.breakdownText' }"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom" visible="{ path: '/MSAUS', formatter: '.formatters.breakdown' }">
                                        <Label text="{i18n>Breakdown.malfunctionDateLabel}:"/>
                                        <Text text="{ path: '/AUSVN', formatter: 'dep.fiori.lib.util.Utilities.formatters.date' }"/>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginBottom" visible="{ path: '/MSAUS', formatter: '.formatters.breakdown' }">
                                        <Label text="{i18n>Breakdown.malfunctionTimeLabel}:"/>
                                        <Text text="{ path: '/AUZTV', formatter: 'dep.fiori.lib.util.Utilities.formatters.time' }"/>
                                    </VBox>
                                </VBox>
                              
                            </u:blocks>
                        </u:ObjectPageSubSection>
                    </u:subSections>
                </u:ObjectPageSection> 
               
            </u:sections>
        </u:ObjectPageLayout>

        <footer>
            <Bar id="otbFooter">
                <contentRight>
                    <Button id="save-button" type="Emphasized" text="{i18nGlobal>General.edit}">
                    </Button>
                </contentRight>
            </Bar>
        </footer>                    
    </Page>
</mvc:View>

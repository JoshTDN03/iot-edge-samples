<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout">
    <Dialog
        title="{i18nGlobal>CostCenterSelect.title}"
        class="dep-fiori"
        stretchOnPhone="true"
        contentHeight="100%"
        contentWidth="100%"
        verticalScrolling="false"
        afterClose="dep.fiori.lib.util.SelectCostCenterDialog.onCancel">
        <Page
            showHeader="false"
            showSubHeader="false"
            enableScrolling="false">
            <VBox
                fitContainer="true"
                renderType="Bare">
                <fb:FilterBar
                    header="{i18nGlobal>CostCenterSelect.filter}"
                    showClearOnFB="true"
                    clear="dep.fiori.lib.util.SelectCostCenterDialog.onClearFilter"
                    search="dep.fiori.lib.util.SelectCostCenterDialog.onFilter"
                    showFilterConfiguration="false">
                    <fb:filterItems>
                        <fb:FilterItem
                            name="group"
                            label="{i18nGlobal>CostCenterSelect.kokrs}">
                            <fb:control>
                                <Input value="{filter>/KOKRS}" />
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem
                            name="code"
                            label="{i18nGlobal>CostCenterSelect.datbi}" >
                            <fb:control>
                                <Input value="{filter>/DATBI}" />
                            </fb:control>
                        </fb:FilterItem>
                        <fb:FilterItem
                            name="description"
                            label="{i18nGlobal>CostCenterSelect.kostl}">
                            <fb:control>
                                <Input value="{filter>/KOSTL}" />
                            </fb:control>
                        </fb:FilterItem>
                    </fb:filterItems>
                </fb:FilterBar>
                <ScrollContainer
                    vertical="true"
                    height="100%"
                    width="100%">
                    <Table
                        items="{odata>/CostCenter}"
                        noDataText="{
                            path: 'i18nGlobal>CostCenterSelect.listEmpty',
                            formatter: 'dep.fiori.lib.util.SelectCostCenterDialog.setTableReference'
                        }"
                        growing="true"
                        growingScrollToLoad="true"
                        mode="SingleSelectMaster"
                        itemPress="dep.fiori.lib.util.SelectCostCenterDialog.onSelect">
                        <headerToolbar>
                            <Toolbar>
                                <Title text="{i18nGlobal>General.costcenter}" />
                                <ToolbarSpacer />
                                <Button
                                    tooltip="{i18nGlobal>General.sortList}"
                                    icon="sap-icon://drop-down-list"
                                    press="dep.fiori.lib.util.SelectCostCenterDialog.onSortPress" />
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column vAlign="Middle">
                                <Title text="{i18nGlobal>CostCenterSelect.kokrs}" />
                            </Column>
                            <Column
                                vAlign="Middle"
                                width="30%"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                popinDisplay="Inline">
                                <Title text="{i18nGlobal>CostCenterSelect.datbi}" />
                            </Column>
                            <Column vAlign="Middle">
                                <Title text="{i18nGlobal>CostCenterSelect.kostl}" />
                            </Column>
                        </columns>
                        <ColumnListItem type="Active">
                            <Label
                                text="{odata>KOKRS}"
                                tooltip="{odata>KOKRS}" />
                            <Label
                                text="{odata>DATBI}"
                                tooltip="{odata>DATBI}" />
                            <Label
                                text="{odata>KOSTL}"
                                tooltip="{odata>KOSTL}" />
                        </ColumnListItem>
                    </Table>
                </ScrollContainer>
            </VBox>
            <footer>
                <Bar>
                    <contentRight>
                        <Button
                            text="{i18nGlobal>General.cancel}"
                            press="dep.fiori.lib.util.SelectCostCenterDialog.close" />
                    </contentRight>
                </Bar>
            </footer>
        </Page>
    </Dialog>
</core:FragmentDefinition>
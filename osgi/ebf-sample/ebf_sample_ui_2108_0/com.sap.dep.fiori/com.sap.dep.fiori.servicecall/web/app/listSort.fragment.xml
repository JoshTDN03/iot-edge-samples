<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>ServiceCall.subject}"
                key="SUBJECT" />
            <ViewSettingsItem
                text="{i18n>ServiceCall.problemType}"
                key="PROBLEM_TYPE_NAME" />
            <ViewSettingsItem
                text="{i18n>ServiceCall.priority}"
                key="PRIORITY" />
            <ViewSettingsItem
                text="{i18n>ServiceCall.origin}"
                key="ORIGIN_NAME" />
            <ViewSettingsItem
                text="{i18n>ServiceCall.status}"
                key="STATUS_NAME" />
            <ViewSettingsItem
                text="{i18n>ServiceCall.remarks}"
                key="REMARKS" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
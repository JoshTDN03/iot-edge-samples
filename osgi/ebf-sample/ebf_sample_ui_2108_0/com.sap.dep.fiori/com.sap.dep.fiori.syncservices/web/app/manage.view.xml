<mvc:View
    controllerName="dep.fiori.syncservices.app.manage"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page
        title="Manage Sync Services"
        class="sapUiContentPadding" >
        <customHeader>
                <Toolbar>
                    <Title text="{i18n>Form.title}"/>
                    <ToolbarSpacer></ToolbarSpacer>
                </Toolbar>
        </customHeader>
        <content>
            <VBox class="sapUiTinyMarginBottom">
                <HBox>
                    <Label
                        text="Last Attempted Sync: "
                        class="sapUiTinyMarginEnd" />
                    <Label text="{
                        path: 'timestamp>/0/LAST_SYNC_TS',
                        formatter: 'dep.fiori.lib.util.Utilities.formatters.formatTimestamp'
                    }" />
                </HBox>
                <HBox>
                    <Label
                        text="Last Successful Sync:"
                        class="sapUiTinyMarginEnd" />
                    <Label text="{
                        path: 'timestamp>/0/LAST_SUCC_SYNC_TS',
                        formatter: 'dep.fiori.lib.util.Utilities.formatters.formatTimestamp'
                    }" />
                </HBox>
            </VBox>
            <VBox>
                <Button type="Accept"
                        text="Start Synchronization Service"
                        press="onStartPress"
                        ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Button>
                <Button type="Reject"
                        text="Stop Synchronization Service"
                        press="onStopPress"
                        ariaDescribedBy="acceptButtonDescription genericButtonDescription">
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Button>
            </VBox>
        </content>
        <footer>
            <Bar id="otbFooter">
                <contentLeft>
                    <Button
                        id="messages-button"
                        icon="sap-icon://message-popup"
                        text="{/length}"
                        type="Emphasized"
                        press="handleMessagePopoverPress"/>
                </contentLeft>
                <contentRight>
                    <Button
                        id="cancel-button"
                        text="{i18nGlobal>General.cancel}"
                        press="dep.fiori.lib.util.Utilities.navHome"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>

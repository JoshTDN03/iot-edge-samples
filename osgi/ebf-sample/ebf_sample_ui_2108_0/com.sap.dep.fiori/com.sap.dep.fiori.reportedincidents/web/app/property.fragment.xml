<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>PropertyLookup.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="propertyDialogCancel"/>
        </endButton>

        <SearchField width="100%" placeholder="{i18n>PropretyLookup.searchPlaceholder} ..." liveChange="propertyFilter"/>

        <Table inset="true" mode="sap.m.ListMode.None" includeItemInSelection="false" items="{/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>PropertyLookup.propertyID}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>PropertyLookup.propertyDesc}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>PropertyLookup.propertyType}"/>
                </Column>
				<Column demandPopin="true">
                    <Label text="{i18n>PropertyLookup.propertyLocation}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>PropertyLookup.propertyFLocation}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="onPropertySelect">
                    <cells>
                        <Text text="{PROPERTY_ID}"/>
                        <Text text="{PROPERTY_DESC}"/>
						<Text text="{PROPERTY_TYPE}"/>
						 <Text text="{ASSET_LOCATION}"/>
                        <Text text="{PROPERTY_FLOC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
<mvc:View
    controllerName="dep.fiori.syncstatus.app.main"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:u="sap.uxap"
    xmlns="sap.m">
    <u:ObjectPageLayout
        id="content"
        enableLazyLoading="true"
        useIconTabBar="true">
        <u:ObjectPageSection title="{i18n>Title.inProgress}">
            <u:ObjectPageSubSection>
                <u:blocks>
                    <VBox
                        fitContainer="true"
                        renderType="Bare">
                        <fb:FilterBar
                            showClearOnFB="true"
                            clear="onClearInProgressFilter"
                            search="onFilterInProgress"
                            showFilterConfiguration="false"
                            filterBarExpanded="false">
                            <fb:filterItems>
                                <fb:FilterItem
                                    name="start"
                                    label="{i18nGlobal>General.startDate}">
                                    <fb:control>
                                        <DatePicker
                                            value="{filterInProgress>/start}"
                                            valueFormat="yyyyMMdd00000000000000" />
                                    </fb:control>
                                </fb:FilterItem>
                                <fb:FilterItem
                                    name="end"
                                    label="{i18nGlobal>General.endDate}" >
                                    <fb:control>
                                        <DatePicker
                                            value="{filterInProgress>/end}"
                                            valueFormat="yyyyMMdd00000000000000" />
                                    </fb:control>
                                </fb:FilterItem>
                            </fb:filterItems>
                        </fb:FilterBar>
                        <Table
                            id="inProgressTable"
                            noDataText="{i18n>List.empty}"
                            items="{
                                path: 'inProgress>/',
                                sorter: {
                                    path: 'TRANSID',
                                    descending: true
                                }
                            }"
                            growing="true"
                            growingScrollToLoad="true">
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="{i18n>Title.inProgress}" />
                                    <ToolbarSpacer />
                                    <Button
                                        tooltip="{i18n>List.refresh}"
                                        icon="sap-icon://refresh"
                                        press="onRefreshInProgress" />
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column
                                    vAlign="Middle"
                                    width="auto">
                                    <Title
                                        text="{i18n>General.status}"
                                        tooltip="{i18n>General.status}" />
                                </Column>
                                <Column
                                    vAlign="Middle"
                                    width="35%">
                                    <Title
                                        text="{i18n>General.object}"
                                        tooltip="{i18n>General.object}" />
                                </Column>
                                <Column
                                    vAlign="Middle"
                                    width="auto">
                                    <Title
                                        text="{i18n>General.id}"
                                        tooltip="{i18n>General.id}" />
                                </Column>
                                <Column
                                    vAlign="Middle"
                                    width="auto"
                                    demandPopin="true"
                                    popinDisplay="Inline"
                                    minScreenWidth="Desktop">
                                    <Title
                                        text="{i18n>General.user}"
                                        tooltip="{i18n>General.user}" />
                                </Column>
                                <Column
                                    vAlign="Middle"
                                    width="20%"
                                    demandPopin="true"
                                    popinDisplay="Inline"
                                    minScreenWidth="Desktop">
                                    <Title
                                        text="{i18n>General.date}"
                                        tooltip="{i18n>General.date}" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Label
                                            text="{inProgress>STATUS}"
                                            tooltip="{inProgress>STATUS}" />
                                        <Label
                                            text="{inProgress>TRANS_DESC}"
                                            tooltip="{inProgress>TRANS_DESC}" />
                                        <Label
                                            text="{inProgress>OBJID}"
                                            tooltip="{inProgress>OBJID}" />
                                        <Label
                                            text="{inProgress>DEVICE_USER}"
                                            tooltip="{inProgress>DEVICE_USER}" />
                                        <Label
                                            text="{
                                                path: 'inProgress>TRANSID',
                                                formatter: '.dateFormatter'
                                            }"
                                            tooltip="{
                                                path: 'inProgress>TRANSID',
                                                formatter: '.dateFormatter'
                                            }" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </u:blocks>
            </u:ObjectPageSubSection>
        </u:ObjectPageSection>
        <u:ObjectPageSection title="{i18n>Title.errors}">
            <u:ObjectPageSubSection>
                <u:blocks>
                    <VBox
                        fitContainer="true"
                        renderType="Bare">
                        <fb:FilterBar
                            showClearOnFB="true"
                            clear="onClearErrorsFilter"
                            search="onFilterErrors"
                            showFilterConfiguration="false"
                            filterBarExpanded="false">
                            <fb:filterItems>
                                <fb:FilterItem
                                    name="start"
                                    label="{i18nGlobal>General.startDate}">
                                    <fb:control>
                                        <DatePicker
                                            value="{filterErrors>/start}"
                                            valueFormat="yyyyMMdd00000000000000" />
                                    </fb:control>
                                </fb:FilterItem>
                                <fb:FilterItem
                                    name="end"
                                    label="{i18nGlobal>General.endDate}" >
                                    <fb:control>
                                        <DatePicker
                                            value="{filterErrors>/end}"
                                            valueFormat="yyyyMMdd00000000000000" />
                                    </fb:control>
                                </fb:FilterItem>
                            </fb:filterItems>
                        </fb:FilterBar>
                        <Table
                            id="errorsTable"
                            noDataText="{i18n>List.empty}"
                            items="{
                                path: 'errors>/',
                                sorter: {
                                    path: 'TRANSID',
                                    descending: true
                                }
                            }"
                            growing="true"
                            growingScrollToLoad="true">
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="{i18n>Title.errors}" />
                                    <ToolbarSpacer />
                                    <Button
                                        tooltip="{i18n>List.refresh}"
                                        icon="sap-icon://refresh"
                                        press="onRefreshErrors" />
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column
                                    vAlign="Middle"
                                    width="auto">
                                    <Title
                                        text="{i18n>General.date}"
                                        tooltip="{i18n>General.date}" />
                                </Column>
                                <Column
                                    vAlign="Middle"
                                    width="60%"
                                    demandPopin="true"
                                    minScreenWidth="Desktop">
                                    <Title
                                        text="{i18n>General.description}"
                                        tooltip="{i18n>General.description}" />
                                </Column>
                                <Column
                                    vAlign="Middle"
                                    width="auto">
                                    <Title
                                        text="{i18n>General.object}"
                                        tooltip="{i18n>General.object}" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Label
                                            text="{
                                                path: 'errors>TRANSID',
                                                formatter: '.dateFormatter'
                                            }"
                                            tooltip="{
                                                path: 'errors>TRANSID',
                                                formatter: '.dateFormatter'
                                            }" />
                                        <Label
                                            text="{errors>MESSAGE}"
                                            tooltip="{errors>MESSAGE}" />
                                        <Label
                                            text="{errors>OBJID}"
                                            tooltip="{errors>OBJID}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </u:blocks>
            </u:ObjectPageSubSection>
        </u:ObjectPageSection>
    </u:ObjectPageLayout>
</mvc:View>
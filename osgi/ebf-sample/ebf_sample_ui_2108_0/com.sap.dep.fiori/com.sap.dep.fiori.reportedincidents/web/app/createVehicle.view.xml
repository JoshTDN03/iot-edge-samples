<mvc:View
    controllerName="dep.fiori.reportedincidents.app.createVehicle"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.uxap"
    xmlns="sap.m">
    <Page
        id="main"
        showHeader="false">
       				
		<f:Form id="form">

            <f:toolbar>
                <Toolbar>
                    <Title text="{i18n>VehicleForm.createVehicleTitle}"/>
                    <ToolbarSpacer></ToolbarSpacer>
                </Toolbar>
            </f:toolbar>

            <f:layout>
                <f:ResponsiveGridLayout
                    hSpacing="2"
                    /> 
            </f:layout>

            <f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement>
							<f:label>
								<Label text="{i18n>VehicleForm.vehicleTitleWhat}" design="Bold">
									<layoutData>
										<l:GridData
											span="L12 M12 S12">
										</l:GridData>
									</layoutData>
								</Label>
							</f:label>	
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>VehicleForm.vehicle}"
									required="true"/>
							</f:label>
							<f:fields>
									<Input 
                                    id="vehicleID"
                                    showValueHelp="true"
                                    value="{INVOLVED_VEHICLE>/VEHICLE_ID}"
                                    valueHelpOnly="true"
                                    valueHelpRequest="equipmentLookupPress">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>VehicleForm.desc}"
									required="true">
								</Label>
							</f:label>
							<f:fields>
								<Input
									id="vehicleDesc"
									value="{INVOLVED_VEHICLE>/VEHICLE_DESC}"
									maxLength="40"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>VehicleForm.type}"/>
							</f:label>
							<f:fields>
									 <Input 
                                    id="vehicleType"
									showValueHelp="true"
                                    value="{INVOLVED_VEHICLE>/VEHICLE_TYPE}"
									valueHelpOnly="true"
									valueHelpRequest="equipmentTypeLookupPress">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
														
							</f:fields>
						</f:FormElement>
						<!--<f:FormElement>
							<f:label>
								<Label text="{i18n>VehicleForm.plantId}" required="false"/>
							</f:label>

							<f:fields>
								<Input
									id="vPlantID"
									value="{plantIDModel>/PLANT_ID}"
									enabled="false">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>-->
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>VehicleForm.manufacturer}"/>
							</f:label>
							<f:fields>
								<Input
									id= "vehicleManu"
									value="{INVOLVED_VEHICLE>/VEHICLE_MANUFACTURER}"
									maxLength="30"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						 <f:FormElement>
							<f:label>
								<Label
									text="{i18n>VehicleForm.model}"/>
							</f:label>
							<f:fields>          
								<Input
									id="vehicleModel"
									value="{INVOLVED_VEHICLE>/VEHICLE_MODEL}"
									maxLength="20"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>						
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>VehicleForm.license}"/>
							</f:label>
							<f:fields>                     
								<Input
									id="vehicleLic"
									value="{INVOLVED_VEHICLE>/VEHICLE_LIC_PLATE_ID}"
									maxLength="15"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label text="{i18n>VehicleForm.addDesc}"/>
							</f:label>
							
							<f:fields>
								<TextArea
									id="addDescription"
									value="{INVOLVED_VEHICLE>/VEHICLE_ADD_DESC}"
									rows="4">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</TextArea>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label text="{i18n>VehicleForm.vehicleTitleWhoOwner}" design="Bold">
									<layoutData>
										<l:GridData
											span="L12 M12 S12">
										</l:GridData>
									</layoutData>
								</Label>
							</f:label>	
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.firstName}"
								/>
							</f:label>
							<f:fields>
								<Input
								    id="vofirstName"
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_FNAME}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.lastName}"
								/>
							</f:label>
							<f:fields>
								<Input
									id="volastName"
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_LNAME}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.organizationalUnit}"/>
							</f:label>
							<f:fields>
								<Input
									styleClass="sapUiBigMarginBottom"
									id="voOrgUnitID"                                    
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_ORG}"
									maxLength="40">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
														
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.company}"/>
							</f:label>
							<f:fields>
								<Input
									id="vocompany" 
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_COMPANY}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.address}"/>
							</f:label>
							<f:fields>
								<Input
									id= "voaddress"
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_ADDRESS}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						 <f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.phone}"/>
							</f:label>
							<f:fields>          
								<Input
									id="vophone"
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_PHONE}"
									maxLength="40"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>						
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.email}"/>
							</f:label>
							<f:fields>                     
								<Input
									id="voemail"
									value="{INVOLVED_VEHICLE>/VEHICLE_OWNER_EMAIL}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						
						<f:FormElement>
							<f:label>
								<Label text="{i18n>VehicleForm.vehicleTitleWhoDriver}" design="Bold">
									<layoutData>
										<l:GridData
											span="L12 M12 S12">
										</l:GridData>
									</layoutData>
								</Label>
							</f:label>	
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.firstName}"
								/>
							</f:label>
							<f:fields>
								<Input
								    id="vdfirstName"
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_FNAME}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.lastName}"
								/>
							</f:label>
							<f:fields>
								<Input
									id="vdlastName"
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_LNAME}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.organizationalUnit}"/>
							</f:label>
							<f:fields>
								<Input
									styleClass="sapUiBigMarginBottom"
									id="vdOrgUnitID"                                    
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_ORG}"
									maxLength="40">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
														
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.company}"/>
							</f:label>
							<f:fields>
								<Input
									id="vdcompany" 
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_COMPANY}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.address}"/>
							</f:label>
							<f:fields>
								<Input
									id= "vdaddress"
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_ADDRESS}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						 <f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.phone}"/>
							</f:label>
							<f:fields>          
								<Input
									id="vdphone"
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_PHONE}"
									maxLength="40"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>						
						<f:FormElement>
							<f:label>
								<Label
									text="{i18n>InjuredForm.email}"/>
							</f:label>
							<f:fields>                     
								<Input
									id="vdemail"
									value="{INVOLVED_VEHICLE>/VEHICLE_DRIVER_EMAIL}"
									maxLength="60"
									class="sapUiSmallMarginBottom">
									<layoutData>
										<l:GridData
											span="L5 M5 S12">
										</l:GridData>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
					   
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
        </f:Form>

        <footer>
            <Bar id="otbFooter">
                <contentLeft>
                    <Button
                        id="messages-button"
                        icon="sap-icon://message-popup"
                        text="{/length}"
                        type="Emphasized"
                        press="handleMessagePopoverPress"/>
                </contentLeft>
                <contentRight>
                    <Button
                        id="save-button"
                        type="Emphasized"
                        text="{i18nGlobal>General.save}"
                        press="vehicleSave"/>
                    <Button
                        id="cancel-button"
                        text="{i18nGlobal>General.cancel}"
                        press="onCancel"/>
                </contentRight>
            </Bar>
        </footer> 
    </Page>
</mvc:View>
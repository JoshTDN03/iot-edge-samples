<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout">
    <Dialog
        title="{i18nGlobal>EquipmentSelect.title}"
        class="dep-fiori"
        stretchOnPhone="true"
        contentHeight="100%"
        contentWidth="100%"
        verticalScrolling="false"
        afterClose="dep.fiori.lib.util.SelectFromBOMDialog.onCancel">
        <Page
            showHeader="false"
            showSubHeader="false"
            enableScrolling="false">
            <VBox
                fitContainer="true"
                renderType="Bare">
                <core:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
                <ScrollContainer
                    vertical="true"
                    height="100%"
                    width="100%">
                    <Table
                        id="list"
                        items="{/}"
                        noDataText="{i18nGlobal>EquipmentSelect.listEmpty}"
                        growing="true"
                        growingScrollToLoad="true"
                        mode="MultiSelect">
                        <headerToolbar>
                            <Toolbar>
                                <Title text="{i18nGlobal>General.equipment}" />
                                <ToolbarSpacer />
                                <Button
                                    tooltip="{i18nGlobal>General.sortList}"
                                    icon="sap-icon://drop-down-list"
                                    press="dep.fiori.lib.util.SelectFromBOMDialog.onSortPress" />
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column vAlign="Middle">
                                <Title text="{i18nGlobal>MaterialSelect.material}" />
                            </Column>
                            <Column vAlign="Middle">
                                <Title text="{i18nGlobal>General.item}" />
                            </Column>
                            <Column
                                vAlign="Middle"
                                width="50%"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                popinDisplay="Inline">
                                <Title text="{i18nGlobal>General.description}" />
                            </Column>
                        </columns>
                        <ColumnListItem type="Inactive">
                            <Label
                                text="{IDNRK}"
                                tooltip="{IDNRK}"
                                design="Bold"
                                class="identifierTextBlue" />
                            <Label
                                text="{STLKN}"
                                tooltip="{STLKN}" />
                            <Label
                                text="{MAKTX}"
                                tooltip="{MAKTX}" />
                        </ColumnListItem>
                    </Table>
                </ScrollContainer>
            </VBox>
            <footer>
                <Bar>
                    <contentRight>
                        <Button
                            text="{i18nGlobal>General.save}"
                            press="dep.fiori.lib.util.SelectFromBOMDialog.onSelect" />
                        <Button
                            text="{i18nGlobal>General.cancel}"
                            press="dep.fiori.lib.util.SelectFromBOMDialog.close" />
                    </contentRight>
                </Bar>
            </footer>
        </Page>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout">
    <Dialog
        class="dep-fiori"
        stretchOnPhone="true"
        showHeader="false"
        verticalScrolling="false"
        contentHeight="100%"
        afterClose="dep.fiori.lib.util.SelectGenericDialog.onCancel">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <ScrollContainer
                vertical="true"
                horizontal="false">
                <core:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
                <Table
                    id="list"
                    noDataText="{i18nGlobal>General.listEmpty}"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="SingleSelectMaster"
                    itemPress="dep.fiori.lib.util.SelectGenericDialog.onSelect">
                </Table>
            </ScrollContainer>
        </VBox>
        <buttons>
            <Button
                text="{i18nGlobal>General.clear}"
                press="dep.fiori.lib.util.SelectGenericDialog.clear" />
            <Button
                text="{i18nGlobal>General.cancel}"
                press="dep.fiori.lib.util.SelectGenericDialog.close" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
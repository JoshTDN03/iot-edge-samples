<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="Classification">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="classificationListCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterClassificationList"/>

        <Table id="classificationTable" items="{CLASSIFICATION_LIST>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="ID"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="Description"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="selectClassificationList">
                    <cells>
                        <Text text="{CLASSIFICATION_LIST>INJURY_CLASS_ID}"/>
                        <Text text="{CLASSIFICATION_LIST>DESCRIPTION}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
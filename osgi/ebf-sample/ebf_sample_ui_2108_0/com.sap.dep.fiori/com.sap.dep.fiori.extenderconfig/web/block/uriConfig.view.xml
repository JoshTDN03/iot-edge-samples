<c:View
    controllerName="dep.fiori.extenderconfig.block.uriConfig"
    xmlns:c="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns="sap.m">
    <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
    <Table
        id="list"
        noDataText="{i18nGlobal>General.listEmpty}"
        items="{
            path: 'odata>/Config',
            sorter: [
                { path: 'SIGNATURE' },
                { path: 'URI' },
                { path: 'URI_IS_PREFIX' }
            ]
        }"
        growing="true"
        growingScrollToLoad="true"
        mode="SingleSelectMaster"
        itemPress="onListItemSelect">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    tooltip="{i18n>Config.add}"
                    icon="sap-icon://add"
                    press="onCreate" />
                <Button
                    tooltip="{i18nGlobal>General.sortList}"
                    icon="sap-icon://drop-down-list"
                    press="onSortPress" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column
                vAlign="Middle"
                width="25%">
                <Title
                    text="{i18n>Label.signature}"
                    tooltip="{i18n>Tooltip.signature}" />
            </Column>
            <Column vAlign="Middle">
                <Title
                    text="{i18n>Label.uri}"
                    tooltip="{i18n>Tooltip.uri}" />
            </Column>
            <Column
                vAlign="Middle"
                width="15%">
                <Title
                    text="{i18n>Label.isPrefix}"
                    tooltip="{i18n>Tooltip.isPrefix}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Desktop"
                demandPopin="true"
                popinDisplay="Inline"
                width="10%">
                <Title
                    text="{i18n>Label.isShared}"
                    tooltip="{i18n>Tooltip.isShared}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Desktop"
                demandPopin="true"
                popinDisplay="Inline"
                width="10%">
                <Title
                    text="{i18n>Label.hasPersonal}"
                    tooltip="{i18n>Tooltip.hasPersonal}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Desktop"
                demandPopin="true"
                popinDisplay="Inline"
                width="10%">
                <Title
                    text="{i18n>Label.overrideFreq}"
                    tooltip="{i18n>Tooltip.overrideFreq}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Detail">
                <cells>
                    <Label
                        text="{odata>SIGNATURE}"
                        tooltip="{odata>SIGNATURE}" />
                    <Label
                        text="{odata>URI}"
                        tooltip="{odata>URI}" />
                    <Label
                        text="{
                            path: 'odata>URI_IS_PREFIX',
                            formatter: '.yesNoFormatter'
                        }"
                        tooltip="{
                            path: 'odata>URI_IS_PREFIX',
                            formatter: '.yesNoFormatter'
                        }" />
                    <Label
                        text="{
                            path: 'odata>IS_SHARED',
                            formatter: '.yesNoFormatter'
                        }"
                        tooltip="{
                            path: 'odata>IS_SHARED',
                            formatter: '.yesNoFormatter'
                        }" />
                    <Label
                        text="{
                            path: 'odata>HAS_PERSONAL_DATA',
                            formatter: '.yesNoFormatter'
                        }"
                        tooltip="{
                            path: 'odata>HAS_PERSONAL_DATA',
                            formatter: '.yesNoFormatter'
                        }" />
                    <Label text="{odata>OVERRIDE_FREQ}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:View>
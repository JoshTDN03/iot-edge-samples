<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <ViewSettingsDialog confirm="onSort">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>PR.number}"
                key="BANFN"
                selected="true" />
            <ViewSettingsItem
                text="{i18n>PR.localNumber}"
                key="PR_NO_LOCAL" />
            <ViewSettingsItem
                text="{i18n>PR.lastUpdated}"
                key="ERDAT" />
            <ViewSettingsItem
                text="{i18n>PR.status}"
                key="PR_STATUS" />
            <ViewSettingsItem
                text="{i18n>PR.items}"
                key="NUM_ITEMS" />
        </sortItems>
    </ViewSettingsDialog>
</c:FragmentDefinition>
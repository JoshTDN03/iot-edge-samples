<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="Body Side">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="bodySideListCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterBodySideList"/>

        <Table id="bodySideTable" items="{BODY_SIDE>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="ID"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="Description"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="selectBodySideList">
                    <cells>
                        <Text text="{BODY_SIDE>BODYSIDE}"/>
                        <Text text="{BODY_SIDE>BODYSIDEDESC}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
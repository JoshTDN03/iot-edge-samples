<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Dialog
        title="{i18n>Config.dialogHeader}"
        class="dep-fiori"
        stretchOnPhone="true"
        contentHeight="100%"
        contentWidth="100%"
        afterClose=".onEditDialogClose">
        <Page
            showHeader="false"
            showSubHeader="false">
            <f:Form class="dep-fiori-dialog-form">
                <f:layout>
                    <f:ResponsiveGridLayout hSpacing="2" />
                </f:layout>
                <f:FormContainer>
                    <f:layoutData>
                        <l:GridData span="L12 M12 S12" />
                    </f:layoutData>
                    <f:FormElement>
                        <f:label>
                            <Label
                                text="{i18n>Label.signature}"
                                tooltip="{i18n>Tooltip.signature}"
                                required="true" />
                        </f:label>
                        <Input
                            value="{/SIGNATURE}"
                            enabled="{= ${mode>/} === 'create' }">
                            <layoutData>
                                <l:GridData span="L3 M4 S12" />
                            </layoutData>
                        </Input>
                    </f:FormElement>

                    <f:FormElement>
                        <f:label>
                            <Label text="{i18n>Label.service}" tooltip="{i18n>Tooltip.service}" />
                        </f:label>
                        <Input value="{/SERVICE_URL}">
                            <layoutData>
                                <l:GridData span="L6 M8 S12" />
                            </layoutData>
                        </Input>
                    </f:FormElement>
                </f:FormContainer>
            </f:Form>

            <footer>
                <Toolbar>
                    <ToolbarSpacer />
                    <Button
                        text="{i18nGlobal>General.save}"
                        type="Emphasized"
                        press=".onSaveService" />
                    <Button
                        text="{i18nGlobal>General.cancel}"
                        press=".closeEditDialog" />
                </Toolbar>
            </footer>
        </Page>
    </Dialog>
</c:FragmentDefinition>
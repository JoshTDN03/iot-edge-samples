<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Popover
		title="{i18n>title.Details}"
		class="sapUiContentPadding"
		placement="Right"
		contentMinWidth="500px"
		initialFocus="closeButton">
					
		<f:Form editable="false">		
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="4"
					labelSpanS="4"
					adjustLabelSpan="false"
					emptySpanXL="1"
					emptySpanL="1"
					emptySpanM="1"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>salesOrder.Number}">
							<f:fields>
								<Text text="{/title}" />
							</f:fields>
						</f:FormElement>	
						<f:FormElement label="{i18n>salesOrder.DeliveryDate}">
							<f:fields>
								<Text text="{/DeliveryDate}"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>salesOrder.Price}">
							<f:fields>
								<Text text="{/Price}"/>
							</f:fields>
						</f:FormElement>										
						<f:FormElement label="{i18n>salesOrder.SalesItem}">
							<f:fields>
								<Text text="{/SalesItem}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>salesOrder.SalesOrg}">
							<f:fields>
								<Text text="{/SalesOrg}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>salesOrder.SalesOrgName}">
							<f:fields>
								<Text text="{/SalesOrgName}" />
							</f:fields>
						</f:FormElement>											
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Close"
					press="closePopover" />
			</OverflowToolbar>
		</footer>
			
		
	</Popover>
</core:FragmentDefinition>

<mvc:View
    controllerName="dep.fiori.purchaseorder.app.list"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:lib="dep.fiori.lib">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
            <ScrollContainer
                vertical="true"
                height="100%"
                width="100%">
                <Table
                    id="list"
                    noDataText="{i18nGlobal>General.listEmpty}"
                    items="{odata>/Purchase_Orders}"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="SingleSelectMaster"
                    itemPress="onItemPress">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>Page.header}" />
                            <ToolbarSpacer />
                            <Button
                                tooltip="{i18nGlobal>General.sortList}"
                                icon="sap-icon://drop-down-list"
                                press="onSortPress" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column
                            vAlign="Middle"
                            width="auto">
                            <Title
                                text="{i18n>Order.number}"
                                tooltip="{i18n>Order.number}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            width="auto">
                            <Title
                                text="{i18nGlobal>General.date}"
                                tooltip="{i18nGlobal>General.date}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            width="50%"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18nGlobal>General.description}"
                                tooltip="{i18nGlobal>General.description}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            width="auto">
                            <Title
                                text="{i18n>Order.type}"
                                tooltip="{i18n>Order.type}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active">
                            <cells>
                                <HBox
                                    fitContainer="true"
                                    renderType="Bare"
                                    alignItems="Center">
                                    <Label
                                        text="{odata>EBELN}"
                                        tooltip="{odata>EBELN}"
                                        design="Bold"
                                        class="identifierTextBlue sapUiTinyMarginEnd" />
                                    <c:Icon
                                        src="sap-icon://message-error"
                                        size="1.25rem"
                                        color="red"
                                        tooltip="{i18nGlobal>General.hasSyncErrors}"
                                        visible="{= !!${odata>EDGE_ERRORS} }"
                                        press="handleResponsivePopoverPress" />
                                </HBox>
                                <Label
                                    text="{
                                        path: 'odata>BEDAT',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.date'
                                    }"
                                    tooltip="{
                                        path: 'odata>BEDAT',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.date'
                                    }" />
                                <Label
                                    text="{odata>NAME1}"
                                    tooltip="{odata>NAME1}" />
                                <Label
                                    text="{
                                        path: 'odata>POTYP',
                                        formatter: '.typeFormatter'
                                    }"
                                    tooltip="{
                                        path: 'odata>POTYP',
                                        formatter: '.typeFormatter'
                                    }" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </VBox>
    </Page>
</mvc:View>
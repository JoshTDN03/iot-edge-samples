<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar">
    <fb:FilterBar
        id="filterBar"
        header="{i18nGlobal>General.filter}"
        showClearOnFB="true"
        clear="onClearFilter"
        search="onFilter"
        showFilterConfiguration="false"
        filterItems="{
            path: 'filterItems>/',
            factory: 'dep.fiori.lib.util.Filter.filterItemFactory'
        }">
    </fb:FilterBar>
</c:FragmentDefinition>
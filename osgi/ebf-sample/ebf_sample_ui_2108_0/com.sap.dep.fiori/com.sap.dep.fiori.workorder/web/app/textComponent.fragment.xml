<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Dialog
        title="{i18n>Components.editTextItem}"
        class="dep-fiori"
        stretchOnPhone="true"
        contentHeight="100%"
        contentWidth="100%"
        afterClose=".onTextComponentDialogClose">
        <Page
            showHeader="false"
            showSubHeader="false"
            enableScrolling="false">
            <l:Grid
                width="100%"
                class="sapUiSmallMarginTop">
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <layoutData>
                        <l:GridData span="L6 M8 S12" indent="L3 M2" />
                    </layoutData>
                    <Label text="{i18nGlobal>General.description}:" />
                    <Input value="{/POTX1}" />
                </VBox>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <layoutData>
                        <l:GridData span="L6 M8 S12" indent="L3 M2" linebreak="true" />
                    </layoutData>
                    <Label text="{i18n>Components.fullText}:" />
                    <Textarea
                        value="{/SGTXT}"
                        rows="4" />
                </VBox>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <layoutData>
                        <l:GridData span="L3 M4 S6" indent="L3 M2" linebreak="true" />
                    </layoutData>
                    <Label text="{i18n>Components.priceEstimate}:" />
                    <Input
                        value="{/GPREIS}"
                        type="Number" />
                </VBox>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <layoutData>
                        <l:GridData span="L3 M4 S6" />
                    </layoutData>
                    <Label text="{i18nGlobal>General.currency}:" />
                    <ComboBox
                        selectedKey="{/WAERS}"
                        items="{currencies>/}">
                        <c:Item text="{currencies>WAERS}" key="{currencies>WAERS}" />
                    </ComboBox>
                </VBox>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <layoutData>
                        <l:GridData span="L3 M4 S6" indent="L3 M2" linebreak="true" />
                    </layoutData>
                    <Label
                        text="{i18n>Components.quantityRequired}:"
                        required="true" />
                    <Input
                        value="{/BDMNG}"
                        type="Number" />
                </VBox>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <layoutData>
                        <l:GridData span="L3 M4 S6" />
                    </layoutData>
                    <Label text="{i18nGlobal>General.unit}:" />
                    <ComboBox
                        selectedKey="{/RMEINS}"
                        items="{units>/}"
                        showSecondaryValues="true">
                        <c:ListItem
                            text="{units>MSEHI}"
                            key="{units>MSEHI}"
                            additionalText="{units>MSEHL}" />
                    </ComboBox>
                </VBox>
            </l:Grid>
            <footer>
                <Bar>
                    <contentRight>
                        <Button
                            text="{i18nGlobal>General.save}"
                            press=".saveTextItem" />
                        <Button
                            text="{i18nGlobal>General.cancel}"
                            press=".closeTextComponentDialog" />
                    </contentRight>
                </Bar>
            </footer>
        </Page>
    </Dialog>
</c:FragmentDefinition>
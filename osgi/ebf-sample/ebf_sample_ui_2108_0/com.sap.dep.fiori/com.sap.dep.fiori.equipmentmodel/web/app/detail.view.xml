<mvc:View
    controllerName="dep.fiori.equipmentmodel.app.detail"
   class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns:u="sap.uxap"
    xmlns:blocks="dep.fiori.equipmentmodel.block"
    xmlns="sap.m">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <u:ObjectPageLayout 
            id="content"
            alwaysShowContentHeader="true"
            useIconTabBar="true"
            navigate="onBlockSelect">

            <u:headerTitle>
                <u:ObjectPageHeader objectTitle="{i18n>EMDetails.title}: {equipmodel>/MODEL_NAME}" />
            </u:headerTitle>

            <u:headerContent>
                <VBox
                    fitContainer="true"
                    renderType="Bare">
                    <HBox renderType="Bare">
                        <Label
                            text="{i18nGlobal>General.description}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{equipmodel>/DESCRIPTION}" />
                    </HBox>
                    <HBox renderType="Bare">
                        <Label
                            text="{i18n>Model.manufacturer}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{equipmodel>/MANUFACTURER}" />
                    </HBox>
                    <HBox renderType="Bare">
                        <Label
                            text="{i18n>Model.class}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{equipmodel>/CLASS}" />
                    </HBox>
                    <HBox renderType="Bare">
                        <Label
                            text="{i18n>Model.subClass}:"
                            class="sapUiTinyMarginEnd" />
                        <Label text="{equipmodel>/SUBCLASS}" />
                    </HBox>
                </VBox>
            </u:headerContent>

            <u:sections>
                <u:ObjectPageSection
                    id="attributes" 
                    title="{i18n>EMDetails.attribute}">
                    <u:subSections>
                        <u:ObjectPageSubSection>
                            <u:blocks>
                                <ScrollContainer
                                    vertical="true"
                                    height="100%"
                                    width="100%">
                                    <Table 
                                        noDataText="{i18nGlobal>General.listEmpty}"
                                        growing="true"
                                        items="{attributes>/}"
                                        growingScrollToLoad="true">
                                        <headerToolbar>
                                            <Toolbar>
                                                <Title text="{i18nGlobal>General.items} ({attributes>/length})" />
                                                <ToolbarSpacer />
                                                <Button
                                                    tooltip="{i18nGlobal>General.listRefresh}"
                                                    icon="sap-icon://refresh"
                                                    press="refreshAttributes" />
                                            </Toolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column vAlign="Middle">
                                                <Text
                                                    text="{i18n>Attribute.name}"
                                                    tooltip="{i18n>Attribute.name}" />
                                            </Column>
                                            <Column vAlign="Middle">
                                                <Text
                                                    text="{i18n>Attribute.value}"
                                                    tooltip="{i18n>Attribute.value}" />
                                            </Column>
                                            <Column 
                                                vAlign="Middle"
                                                minScreenWidth="Tablet"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text
                                                    text="{i18n>Attribute.min}"
                                                    tooltip="{i18n>Attribute.min}" />
                                            </Column>
                                            <Column 
                                                vAlign="Middle"
                                                minScreenWidth="Tablet"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text
                                                    text="{i18n>Attribute.max}"
                                                    tooltip="{i18n>Attribute.max}" />
                                            </Column>
                                            <Column 
                                                vAlign="Middle"
                                                minScreenWidth="Tablet"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text
                                                    text="{i18n>Attribute.unit}"
                                                    tooltip="{i18n>Attribute.unit}" />
                                            </Column>
                                        </columns>
                                        <ColumnListItem>
                                            <Label
                                                text="{attributes>ATTRIBUTE_NAME}" 
                                                tooltip="{attributes>ATTRIBUTE_NAME}"
                                                design="Bold"
                                                class="identifierTextBlue" />
                                            <Label
                                                text="{
                                                    parts: [ 'attributes>DATA_TYPE', 'attributes>ATTRIBUTE_VALUE1', 'attributes>ATTRIBUTE_VALUE2' ],
                                                    formatter: '.attributeValueFormatter'
                                                }"
                                                tooltip="{
                                                    parts: [ 'attributes>DATA_TYPE', 'attributes>ATTRIBUTE_VALUE1', 'attributes>ATTRIBUTE_VALUE2' ],
                                                    formatter: '.attributeValueFormatter'
                                                }" />
                                            <Label
                                                text="{attributes>MIN_THRESHOLD}"
                                                tooltip="{attributes>MIN_THRESHOLD}" />
                                            <Label
                                                text="{attributes>MAX_THRESHOLD}"
                                                tooltip="{attributes>MAX_THRESHOLD}" />
                                            <Label
                                                text="{attributes>UOM}"
                                                tooltip="{attributes>UOM}" />
                                        </ColumnListItem>
                                    </Table>
                               </ScrollContainer>
                            </u:blocks>
                        </u:ObjectPageSubSection>
                    </u:subSections>
                </u:ObjectPageSection> 
                <u:ObjectPageSection
                    id="sensors" 
                    title="{i18n>EMDetails.sensors}">
                    <u:subSections>
                        <u:ObjectPageSubSection>
                            <u:blocks>
                                <ScrollContainer
                                    vertical="true"
                                    height="100%"
                                    width="100%">
                                    <Table 
                                        noDataText="{i18nGlobal>General.listEmpty}"
                                        growing="true"
                                        items="{sensors>/}"
                                        growingScrollToLoad="true"
                                        itemPress="onSensorSelect">
                                        <headerToolbar>
                                            <Toolbar>
                                                <Title text="{i18nGlobal>General.items} ({sensors>/length})" />
                                                <ToolbarSpacer />
                                                <Button
                                                    tooltip="{i18nGlobal>General.listRefresh}"
                                                    icon="sap-icon://refresh"
                                                    press="refreshSensors" />
                                            </Toolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column 
                                                vAlign="Middle">
                                                <Text
                                                    text="{i18n>Model.name}"
                                                    tooltip="{i18n>Model.name}" />
                                            </Column>
                                            <Column
                                                vAlign="Middle"
                                                minScreenWidth="Tablet"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text 
                                                    text="{i18nGlobal>General.description}" 
                                                    tooltip="{i18nGlobal>General.description}" />
                                            </Column>
                                            <Column 
                                                vAlign="Middle"
                                                minScreenWidth="Tablet"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text 
                                                    text="{i18n>Model.manufacturer}"
                                                    tooltip="{i18n>Model.manufacturer}" />
                                            </Column>
                                            <Column 
                                                vAlign="Middle"
                                                minScreenWidth="Desktop"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text 
                                                    text="{i18n>Model.class}" 
                                                    tooltip="{i18n>Model.class}" />
                                            </Column>
                                            <Column 
                                                vAlign="Middle"
                                                minScreenWidth="Desktop"
                                                demandPopin="true"
                                                popinDisplay="Inline">
                                                <Text 
                                                    text="{i18n>Model.subClass}"
                                                    tooltip="{i18n>Model.subClass}" />
                                            </Column>
                                        </columns>
                                        <ColumnListItem type ="Active">
                                            <cells>
                                                <Label
                                                    text="{sensors>MODEL_NAME}"
                                                    tooltip="{sensors>MODEL_NAME}"
                                                    design="Bold"
                                                    class="identifierTextBlue" />
                                                <Label
                                                    text="{sensors>DESCRIPTION}"
                                                    tooltip="{sensors>DESCRIPTION}" />
                                                <Label
                                                    text="{sensors>MANUFACTURER}"
                                                    tooltip="{sensors>MANUFACTURER}" />
                                                <Label
                                                    text="{sensors>CLASS}"
                                                    tooltip="{sensors>CLASS}" />
                                                <Label
                                                    text="{sensors>SUBCLASS}"
                                                    tooltip="{sensors>SUBCLASS}" />
                                            </cells>
                                        </ColumnListItem>
                                    </Table>
                               </ScrollContainer>
                            </u:blocks>
                        </u:ObjectPageSubSection>
                    </u:subSections>
                </u:ObjectPageSection> 
                <u:ObjectPageSection
                    id="hierarchy"
                    title="{i18n>EMDetails.hierarchy}">
                    <u:subSections>
                        <u:ObjectPageSubSection>
                            <u:blocks>
                                <blocks:Hierarchy/>
                            </u:blocks>
                        </u:ObjectPageSubSection>
                    </u:subSections>
                </u:ObjectPageSection> 
            </u:sections>
        </u:ObjectPageLayout>

        <footer>
            <Bar>
                <contentRight>
                    <Button
                        text="{i18nGlobal>General.cancel}"
                        press="onCancel"/>
                </contentRight>
            </Bar>
        </footer> 
    </Page>
</mvc:View>
<c:View
    controllerName="dep.fiori.manifest.block.containerDetails"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <VBox
        fitContainer="true">
        <f:Form>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanL="2" />
            </f:layout>
            <f:toolbar>
                <Toolbar class="sapUiTinyMarginBottom">
                    <Title text="{i18n>Container.details}" />
                    <ToolbarSpacer />
                    <Button
                        text="{i18nGlobal>General.edit}"
                        press="onEdit"
                        visible="{= !${editDetails>/editable} }" />
                    <Button
                        text="{i18nGlobal>General.save}"
                        press="onSave"
                        visible="{= !!${editDetails>/editable} }" />
                    <Button
                        text="{i18nGlobal>General.cancel}"
                        press="onCancel"
                        visible="{= !!${editDetails>/editable} }" />
                </Toolbar>
            </f:toolbar>
            <f:FormContainer>
                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.id}:"
                            tooltip="{i18n>Container.id}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" />
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label
                        text="{details>/CONTAINER_ID}"
                        tooltip="{details>/CONTAINER_ID}">
                        <layoutData>
                            <l:GridData span="L3 M6 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                <f:FormElement>
                   <f:label>
                        <Label
                            text="{i18n>Container.ext_id}:"
                            tooltip="{i18n>Container.ext_id}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" />
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label
                        text="{details>/EXT_CONTAINER_ID}"
                        tooltip="{details>/EXT_CONTAINER_ID}">
                        <layoutData>
                            <l:GridData span="L3 M6 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.type}:"
                            tooltip="{i18n>Container.type}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" linebreak="true"/>
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label
                        text="{details>/CONTAINER_TYPE}"
                        tooltip="{details>/CONTAINER_TYPE}">
                        <layoutData>
                            <l:GridData span="L3 M6 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                 <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.source}:"
                            tooltip="{i18n>Container.source}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" />
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label
                        text="{details>/CONTAINER_SOURCE}"
                        tooltip="{details>/CONTAINER_SOURCE}">
                        <layoutData>
                            <l:GridData span="L3 M6 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.description}:"
                            tooltip="{i18n>Container.description}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" linebreak="true"/>
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label
                        text="{details>/CONTAINER_DESC}"
                        tooltip="{details>/CONTAINER_DESC}">
                        <layoutData>
                            <l:GridData span="L3 M6 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.status}:"
                            tooltip="{i18n>Container.status}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" linebreak="true"/>
                            </layoutData>
                        </Label>
                    </f:label>
                    <Select
                        items="{statusList>/}"
                        selectedKey="{details>/CONTAINER_STATUS}"
                        showSecondaryValues="true"
                        enabled="{= !!${editDetails>/editable} }">
                        <c:ListItem
                            text="{statusList>CONTAINER_STATUS}"
                            key="{statusList>STATUS_ID}" />
                        <layoutData>
                            <l:GridData span="L2 M3 S12" />
                        </layoutData>
                    </Select>
                </f:FormElement>

                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.sourceLoc}:"
                            tooltip="{i18n>Container.sourceLoc}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" linebreak="true"/>
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label text="{details>/SOURCE_LOC}">
                        <layoutData>
                            <l:GridData span="L2 M3 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.targetLoc}:"
                            tooltip="{i18n>Container.targetLoc}" design="Bold">
                            <layoutData>
                                <l:GridData span="L3 M6 S12"/>
                            </layoutData>
                        </Label>
                    </f:label>
                    <Label text="{details>/TARGET_LOC}">
                        <layoutData>
                            <l:GridData span="L2 M3 S12" />
                        </layoutData>
                    </Label>
                </f:FormElement>

                <f:FormElement>
                    <f:label>
                        <Label
                            text="{i18n>Container.comments}:"
                            tooltip="{i18n>Container.comments}" design="Bold">
                            <layoutData>
                                <l:GridData span="L2 M3 S12" linebreak="true"/>
                            </layoutData>
                        </Label>
                    </f:label>
                     <TextArea
                        value="{details>/COMMENTS}"
                        width="70%"
                        rows="2"
                        editable="{= !!${editDetails>/editable} }">
                        <layoutData>
                            <l:GridData span="L8 M10 S12" />
                        </layoutData>
                     </TextArea>
                </f:FormElement>
            </f:FormContainer>
        </f:Form>
        <Table
            noDataText="{i18nGlobal>General.listEmpty}"
            items="{attributes>/}"
            growing="true"
            growingScrollToLoad="true"
            mode="SingleSelectMaster">
            <headerToolbar>
                <Toolbar>
                    <Title text="{= ${i18n>Container.attributes} + ' (' + (${attributes>/length} || 0) + ')' }" />
                    <ToolbarSpacer />
                    <Button
                        tooltip="{i18nGlobal>General.listRefresh}"
                        icon="sap-icon://refresh"
                        press="refreshList" />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column vAlign="Middle">
                    <Title text="{i18n>Attribute.name}" />
                </Column>
                <Column vAlign="Middle">
                    <Title text="{i18n>Attribute.value}" />
                </Column>
                <Column
                    vAlign="Middle"
                    popinDisplay="Inline">
                    <Title text="{i18n>Attribute.uom}" />
                </Column>
                <Column
                    vAlign="Middle"
                    hAlign="End" />
            </columns>
            <ColumnListItem>
                <Label
                    text="{attributes>ATTR_NAME}"
                    tooltip="{attributes>ATTR_NAME}" />
                <Label
                    text="{attributes>ATTR_VALUE}"
                    tooltip="{attributes>ATTR_VALUE}" />
                <Label
                    text="{attributes>ATTR_UOM}"
                    tooltip="{attributes>ATTR_UOM}" />
            </ColumnListItem>
        </Table>
    </VBox>
</c:View>
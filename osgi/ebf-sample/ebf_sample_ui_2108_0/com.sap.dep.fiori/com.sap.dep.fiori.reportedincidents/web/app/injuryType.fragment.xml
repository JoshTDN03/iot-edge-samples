<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="Injury/Illness Type">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="injuryTypeListCancel"/>
        </endButton>

        <SearchField width="100%" placeholder=" ..." liveChange="filterInjuryTypeList"/>

        <Table id="injuryTypeTable" items="{INJURY_TYPE>/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="ID"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="Description"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="selectInjuryTypeList">
                    <cells>
                        <Text text="{INJURY_TYPE>INJURY_TYPE_ID}"/>
                        <Text text="{INJURY_TYPE>INJURY_DESCRIPTION}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
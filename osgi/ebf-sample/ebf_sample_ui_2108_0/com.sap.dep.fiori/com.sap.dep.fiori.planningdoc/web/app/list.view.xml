<mvc:View
    controllerName="dep.fiori.planningdoc.app.list"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
            <ScrollContainer
                vertical="true"
                height="100%"
                width="100%">
                <Table
                    id="list"
                    noDataText="{i18nGlobal>General.listEmpty}"
                    items="{odata>/PR_Planning_Doc}"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="SingleSelectMaster"
                    itemPress="onItemPress">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>List.title}" />
                            <ToolbarSpacer />
                            <Button
                                tooltip="{i18nGlobal>General.sortList}"
                                icon="sap-icon://drop-down-list"
                                press="onSortPress" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>PlanDoc.id}"
                                tooltip="{i18n>PlanDoc.id}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>MRP.number}"
                                tooltip="{i18n>MRP.number}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            width="40%"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18nGlobal>General.description}"
                                tooltip="{i18nGlobal>General.description}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>PlanDoc.date}"
                                tooltip="{i18n>PlanDoc.date}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active">
                            <cells>
                                <HBox
                                    fitContainer="true"
                                    renderType="Bare"
                                    alignItems="Center">
                                    <Label
                                        text="{odata>PLANDOC_ID}"
                                        tooltip="{odata>PLANDOC_ID}"
                                        design="Bold"
                                        class="identifierTextBlue sapUiTinyMarginEnd" />
                                    <c:Icon
                                        src="sap-icon://accept"
                                        size="1.25rem"
                                        color="green"
                                        tooltip="{i18n>PR.created}"
                                        visible="{= !!${odata>PR_NO_LOCAL} }" />
                                </HBox>
                                <Label
                                    text="{odata>MRP_NUMBER}"
                                    tooltip="{odata>MRP_NUMBER}" />
                                <Label
                                    text="{odata>DESCRIPTION}"
                                    tooltip="{odata>DESCRIPTION}" />
                                <Label
                                    text="{
                                        path: 'odata>CREATED_TS',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.formatJSDate'
                                    }"
                                    tooltip="{
                                        path: 'odata>CREATED_TS',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.formatJSDate'
                                    }" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </VBox>
    </Page>
</mvc:View>
<mvc:View
    controllerName="dep.fiori.workorder.app.list"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns="sap.m"
    xmlns:lib="dep.fiori.lib">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
            <ScrollContainer
                vertical="true"
                height="100%"
                width="100%">
                <Table
                    id="list"
                    noDataText="{i18n>List.empty}"
                    items="{odata>/Workorder}"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="MultiSelect"
                    itemPress="onItemPress">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>List.title}" />
                            <ToolbarSpacer />
                            <Button
                                id="addButton"
                                tooltip="{i18n>Page.title}"
                                icon="sap-icon://add"
                                press="onCreatePress" />
                            <Button
                                tooltip="{i18n>List.changeStatus}"
                                icon="sap-icon://edit"
                                press="onChangeStatus" />
                            <Button
                                tooltip="{i18nGlobal>General.listRefresh}"
                                icon="sap-icon://refresh"
                                press="onRefresh" />
                            <Button
                                tooltip="{i18nGlobal>General.sortList}"
                                icon="sap-icon://drop-down-list"
                                press="onSortPress" />
                            <Button
                                tooltip="{i18nGlobal>General.export}"
                                icon="sap-icon://download"
                                press="onExportPress" />
                            <Button
                                tooltip="{i18nGlobal>General.print}"
                                icon="sap-icon://print"
                                press="onPrintPress" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>Workorder.number}"
                                tooltip="{i18n>Workorder.number}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            width="30%"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18nGlobal>General.description}"
                                tooltip="{i18nGlobal>General.description}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>Workorder.userStatus}"
                                tooltip="{i18n>Workorder.userStatus}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18nGlobal>General.equipment}"
                                tooltip="{i18nGlobal>General.equipment}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title
                                text="{i18n>Form.workcenterLabel}"
                                tooltip="{i18n>Form.workcenterLabel}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title
                                text="{i18n>Workorder.dueDate}"
                                tooltip="{i18n>Workorder.dueDate}" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active">
                            <cells>
                                <HBox
                                    renderType="Bare"
                                    alignItems="Center">
                                    <Label
                                        text="{odata>AUFNR}"
                                        tooltip="{odata>AUFNR}"
                                        design="Bold"
                                        class="identifierTextBlue sapUiTinyMarginEnd" />
                                    <c:Icon
                                        src="sap-icon://message-error"
                                        size="1.25rem"
                                        color="red"
                                        tooltip="{i18n>List.hasErrors}"
                                        visible="{= !!${odata>EDGE_ERRORS} }"
                                        press="handleResponsivePopoverPress" />
                                </HBox>
                                <Label
                                    text="{odata>KTEXT}"
                                    tooltip="{odata>KTEXT}" />
                                <Label
                                    text="{odata>USER_STATUS}"
                                    tooltip="{odata>USER_STATUS}" />
                                <Label
                                    text="{odata>EQUNR}"
                                    tooltip="{odata>EQUNR}" />
                                <Label
                                    text="{odata>VAPLZ}"
                                    tooltip="{odata>VAPLZ}" />
                                <Label
                                    text="{
                                        path: 'odata>GLTRP',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.date'
                                    }"
                                    tooltip="{
                                        path: 'odata>GLTRP',
                                        formatter: 'dep.fiori.lib.util.Utilities.formatters.date'
                                    }"
                                    design="Bold" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </VBox>
    </Page>
</mvc:View>

<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        id="breakdownDialog"
        class="dep-fiori"
        title="{i18n>Breakdown.title}">
        <beginButton>
            <Button
                id="breakdownOk"
                text="{i18nGlobal>General.ok}"
                press="breakdownDialogOk"/>
        </beginButton>

        <endButton>
            <Button
                id="breakdownCancel"
                text="{i18nGlobal>General.cancel}"
                press="breakdownDialogCancel"/>
        </endButton>

         <f:Form id="breakdownForm">
            <f:layout>
                <f:ResponsiveGridLayout
                    class="sapUiSmallMarginTop"
                    hSpacing="2"
                    defaultSpan="L4 M4 S12"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <f:fields>
                                <Label text="{i18n>Breakdown.malfunctionDateLabel}:"/>
                                <DatePicker
                                    valueFormat="yyyyMMdd"
                                    value="{/AUSVN}"
                                    class="malfunctionDate sapUiSmallMarginBottom"/>
                            </f:fields>
                        </f:FormElement>

                        <f:FormElement>
                           <f:fields>
                                <Label text="{i18n>Breakdown.malfunctionTimeLabel}:"/>
                                <TimePicker
                                    valueFormat="hhmmss"
                                    value="{/AUZTV}"
                                    class="malfunctionTime sapUiSmallMarginBottom"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</c:FragmentDefinition>

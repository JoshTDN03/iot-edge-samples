{
    "sap.ui5": {
        "name": "DEP Workorders",
        "version": "1.0",
        "config": {
            "serviceConfig": {
                "rest": {
                    "description": "Base URL",
                    "url": "/ws_restful_data_controller"
                }
            },
            "compactContentDensity": false
        },
        "routing" : {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewType": "XML",
                "viewPath": "dep.fiori.workorder.app",
                "targetControl": "content",
                "targetAggregation": "pages"
            },
            "routes": {
                "default": {
                    "pattern": "",
                    "viewId": "dep-fiori-workorder-list",
                    "view": "list"
                },
                "list": {
                    "pattern": "list/:all*:",
                    "viewId": "dep-fiori-workorder-list",
                    "view": "list"
                },
                "create": {
                    "pattern": "create",
                    "viewId": "dep-fiori-workorder-create",
                    "view": "create"
                },
                "saved": {
                    "pattern": "saved",
                    "viewId": "dep-fiori-workorder-saved",
                    "view": "saved"
                },
                "detail": {
                    "pattern": "{AUFNR}/:block:",
                    "viewId": "dep-fiori-workorder-detail",
                    "view": "detail"
                },
                "operation": {
                    "pattern": "{AUFNR}/operations/{VORNR}",
                    "viewId": "dep-fiori-workorder-operation",
                    "view": "operation"
                }
            }
        },
        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "uri": "i18n/i18n.properties"
            },
            "i18nGlobal": {
                "type": "sap.ui.model.resource.ResourceModel",
                "uri": "/dep_fiori_apps/com.sap.dep.fiori.lib/i18n/i18n.properties"
            }
        },
        "resources": {
            "css": [
                {
                    "uri": "css/style.css"
                },
                {
                    "uri": "/dep_fiori_apps/com.sap.dep.fiori.lib/css/style.css",
                    "id": "dep-lib-style"
                }
            ]
        }
    }
}

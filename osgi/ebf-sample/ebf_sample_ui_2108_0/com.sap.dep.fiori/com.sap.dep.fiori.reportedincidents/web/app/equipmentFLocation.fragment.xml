<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog title="{i18n>EquipmentFLocationLookup.title}">

        <endButton>
            <Button text="{i18nGlobal>General.cancel}" press="equipmentFLocationDialogCancel"/>
        </endButton>

        <SearchField width="100%" placeholder="{i18n>EquipmentFLocationLookup.searchPlaceholder} ..." liveChange="equipmentFLocationFilter"/>

        <Table id="equipmentFLocationTable" inset="true" mode="sap.m.ListMode.None" includeItemInSelection="false" items="{/}">

            <columns>
                <Column demandPopin="true">
                    <Label text="{i18n>EquipmentFLocationLookup.equipmentFLocationCode}"/>
                </Column>
                <Column demandPopin="true">
                    <Label text="{i18n>EquipmentFLocationLookup.equipmentFLocationDesc}"/>
                </Column>
				 <Column demandPopin="true">
                    <Label text="{i18n>EquipmentFLocationLookup.equipmentFLocationClassID}"/>
                </Column>
				 <Column demandPopin="true">
                    <Label text="{i18n>EquipmentFLocationLookup.equipmentFLocationOrgUnit}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem type="Active" press="onEquipmentFLocationSelect">
                    <cells>
                        <Text text="{LOC_CODE}"/>
                        <Text text="{DESCRIPTION}"/>
						<Text text="{LOCATION_CLASS_ID}"/>
						<Text text="{ORG_UNIT_ID}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Dialog>
</core:FragmentDefinition>
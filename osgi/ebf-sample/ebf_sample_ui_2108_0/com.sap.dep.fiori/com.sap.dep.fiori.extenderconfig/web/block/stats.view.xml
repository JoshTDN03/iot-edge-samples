<c:View
    controllerName="dep.fiori.extenderconfig.block.stats"
    xmlns:c="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns="sap.m">
    <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
    <Table
        id="list"
        noDataText="{i18nGlobal>General.listEmpty}"
        items="{
            path: 'odata>/Stats',
            sorter: [
                { path: 'SIGNATURE' },
                { path: 'URI' }
            ]
        }"
        growing="true"
        growingScrollToLoad="true"
        mode="None">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    tooltip="{i18nGlobal>General.sortList}"
                    icon="sap-icon://drop-down-list"
                    press="onSortPress" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column
                vAlign="Middle"
                hAlign="Middle"
                minScreenWidth="Tablet">
                <Title
                    text="{i18n>Label.signature}"
                    tooltip="{i18n>Tooltip.signature}" />
            </Column>
            <Column vAlign="Middle"
             	hAlign="Middle"
                minScreenWidth="Tablet">
                <Title
                    text="{i18n>Label.uri}"
                    tooltip="{i18n>Tooltip.uri}" />
            </Column>
            <Column
                vAlign="Middle"
                hAlign="Middle"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline">
                <Title
                    text="{i18n>Label.accessCount}"
                    tooltip="{i18n>Tooltip.accessCount}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline">
                <Title
                    text="{i18n>Label.lastAccess}"
                    tooltip="{i18n>Tooltip.lastAccess}" />
            </Column>
            <Column
                vAlign="Middle"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline">
                <Title
                    text="{i18n>Label.lastFetch}"
                    tooltip="{i18n>Tooltip.lastFetch}" />
            </Column>
            <Column
                vAlign="Middle"
                hAlign="Middle"
                minScreenWidth="Tablet"
                demandPopin="true"
                popinDisplay="Inline"
                width="30%">
                <Title
                    text="{i18n>Label.refreshFreqMins}"
                    tooltip="{i18n>Tooltip.refreshFreqMins}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Label
                        text="{odata>SIGNATURE}"
                        tooltip="{odata>SIGNATURE}" />
                    <Label
                        text="{odata>URI}"
                        tooltip="{odata>URI}" />
                    <Label text="{odata>ACCESS_COUNT}" />
                    <Label
                        text="{
                            path: '{odata>LAST_ACCESS}',
                            formatter: '.odataDateFormatter'
                        }"
                        tooltip="{
                            path: '{odata>LAST_ACCESS}',
                            formatter: '.odataDateFormatter'
                        }" />
                    <Label
                        text="{
                            path: '{odata>LAST_FETCH}',
                            formatter: '.odataDateFormatter'
                        }"
                        tooltip="{
                            path: '{odata>LAST_FETCH}',
                            formatter: '.odataDateFormatter'
                        }" />
                    <Label text="{odata>REFRESH_FREQ_MINS}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</c:View>
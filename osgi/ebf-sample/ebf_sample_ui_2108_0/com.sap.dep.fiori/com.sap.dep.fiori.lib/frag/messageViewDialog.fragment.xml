<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <Dialog
        class="dep-fiori"
        verticalScrolling="false"
        contentWidth="50%"
        contentHeight="50%"
        resizable="true">
        <MessageView
            items="{messages>/}">
            <MessageItem
                type="{messages>type}"
                title="{messages>title}"
                subtitle="{messages>subtitle}" />
        </MessageView>
        <endButton>
            <Button
                text="{i18nGlobal>General.ok}"
                press=".close" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
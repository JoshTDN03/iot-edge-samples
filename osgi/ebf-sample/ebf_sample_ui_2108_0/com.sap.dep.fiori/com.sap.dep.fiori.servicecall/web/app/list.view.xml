<mvc:View
    controllerName="dep.fiori.servicecall.app.list"
    class="dep-fiori"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page
        showHeader="false"
        showSubHeader="false"
        enableScrolling="false">
        <VBox
            fitContainer="true"
            renderType="Bare">
            <c:Fragment fragmentName="dep.fiori.lib.frag.filterBar" type="XML" />
            <ScrollContainer
                vertical="true"
                height="100%"
                width="100%">
                <Table
                    id="list"
                    items="{/}"
                    noDataText="{i18nGlobal>General.listEmpty}"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="SingleSelectMaster"
                    itemPress="onItemPress">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="{i18n>List.title}" />
                            <ToolbarSpacer />
                            <Button
                                tooltip="{i18n>List.createServiceCall}"
                                icon="sap-icon://add"
                                press="onCreatePress" />
                            <Button
                                tooltip="{i18nGlobal>General.sortList}"
                                icon="sap-icon://drop-down-list"
                                press="onSortPress" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column vAlign="Middle">
                            <Title text="{i18n>ServiceCall.subject}" />
                        </Column>
                        <Column vAlign="Middle">
                            <Title text="{i18n>ServiceCall.priority}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title text="{i18n>ServiceCall.problemType}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title text="{i18n>ServiceCall.origin}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title text="{i18n>ServiceCall.status}" />
                        </Column>
                        <Column
                            vAlign="Middle"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="Inline">
                            <Title text="{i18n>ServiceCall.remarks}" />
                        </Column>
                    </columns>
                    <ColumnListItem vAlign="Middle" type="Active">
                        <Label
                            text="{SUBJECT}"
                            tooltip="{SUBJECT}" />
                        <Label
                            text="{PRIORITY}"
                            tooltip="{PRIORITY}" />
                        <Label
                            text="{PROBLEM_TYPE_NAME}"
                            tooltip="{PROBLEM_TYPE_NAME}" />
                        <Label
                            text="{ORIGIN_NAME}"
                            tooltip="{ORIGIN_NAME}" />
                        <Label
                            text="{STATUS_NAME}"
                            tooltip="{STATUS_NAME}" />
                        <Label
                            text="{REMARKS}"
                            tooltip="{REMARKS}" />
                    </ColumnListItem>
                </Table>
            </ScrollContainer>
        </VBox>
    </Page>
</mvc:View>